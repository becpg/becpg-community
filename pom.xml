	<version>2.0.0</version>
	<parent>
		<groupId>org.alfresco.maven</groupId>
		<artifactId>alfresco-sdk-parent</artifactId>
		<version>2.0.0-beta-3</version>
	</parent>
	<prerequisites>
		<maven>3.2.2</maven>
	</prerequisites>
	<description>BeCPG Parent Project</description>
	<organization>
