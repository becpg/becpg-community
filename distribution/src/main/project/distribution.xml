<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>becpg-project</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/amps</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<includes>
				<include>fr.becpg:becpg-core</include>
				<include>fr.becpg:becpg-share</include>
			   <include>fr.becpg:becpg-project-core</include>
				<include>fr.becpg:becpg-project-share</include>
			</includes>	
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${basedir}/src/main/project/bin</directory>
			<outputDirectory>/</outputDirectory>
			<fileMode>0755</fileMode>
			<filtered>true</filtered>
		</fileSet>
	</fileSets>
</assembly>
