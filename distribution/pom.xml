<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>becpg-parent</artifactId>
		<groupId>fr.becpg</groupId>
		<version>0.1.3</version>
		<relativePath>../</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>fr.becpg</groupId>
	<artifactId>distribution</artifactId>
	<packaging>pom</packaging>
	<name>beCPG distribution</name>
	<version>0.1.3</version>
	<properties>
		<maven.build.timestamp.format>yyyyMMdd-HHmm</maven.build.timestamp.format>
	</properties>
	<dependencies>
		<dependency>
			<groupId>fr.becpg</groupId>
			<artifactId>becpg-controls-core</artifactId>
			<type>amp</type>
			<version>0.1.3</version>
		</dependency>
		<dependency>
			<groupId>fr.becpg</groupId>
			<artifactId>becpg-controls-share</artifactId>
			<type>amp</type>
			<version>0.1.3</version>
		</dependency>
		<dependency>
			<groupId>fr.becpg</groupId>
			<artifactId>becpg-designer-core</artifactId>
			<type>amp</type>
			<version>0.1.3</version>
		</dependency>
		<dependency>
			<groupId>fr.becpg</groupId>
			<artifactId>becpg-designer-share</artifactId>
			<type>amp</type>
			<version>0.1.3</version>
		</dependency>
		<dependency>
			<groupId>fr.becpg</groupId>
			<artifactId>becpg-core</artifactId>
			<type>amp</type>
			<version>0.1.3</version>
		</dependency>
		<dependency>
			<groupId>fr.becpg</groupId>
			<artifactId>becpg-share</artifactId>
			<type>amp</type>
			<version>0.1.3</version>
		</dependency>
	</dependencies>
	<build>
	<plugins>
		<plugin>
	      <artifactId>maven-assembly-plugin</artifactId>
	      <version>2.2.2</version>
	      <executions>
	        <execution>
	          <id>distro-assembly</id>
	          <phase>package</phase>
	          <goals>
	            <goal>single</goal>
	          </goals>
	          <configuration>
	            <finalName>becpg-${maven.build.timestamp}</finalName>
	            <descriptors>
	              <descriptor>distribution.xml</descriptor>
	            </descriptors>
	          </configuration>
	        </execution>
	      </executions>
	    </plugin>
    </plugins>
	</build>
	
</project>
