<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/amps</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<includes>
				<include>fr.becpg:alfresco-core-patch</include>
				<include>fr.becpg:becpg-controls-core</include>
				<include>fr.becpg:becpg-controls-share</include>
				<include>fr.becpg:becpg-designer-core</include>
				<include>fr.becpg:becpg-designer-share</include>
				<include>fr.becpg:becpg-core</include>
				<include>fr.becpg:becpg-share</include>
			</includes>	
		</dependencySet>
		<dependencySet>
			<outputDirectory>/dist/saiku/WEB-INF/lib</outputDirectory>
			<includes>
				<include>fr.becpg:becpg-olap</include>
				<include>org.apache.httpcomponents:httpclient</include>
				<include>org.apache.httpcomponents:httpmime</include>
				<include>commons-codec:commons-codec</include>
				<include>org.apache.httpcomponents:httpcore</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>../becpg-olap/src/main/config</directory>
			<outputDirectory>/dist</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/bin</directory>
			<outputDirectory>/</outputDirectory>
			<fileMode>0755</fileMode>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>../alfresco-patch/_diff</directory>
			<outputDirectory>/dist</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
