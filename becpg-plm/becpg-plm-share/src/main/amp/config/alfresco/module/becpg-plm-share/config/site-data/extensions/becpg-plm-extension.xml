<!-- http://blogs.alfresco.com/wp/ddraper/category/alfresco-share-customization/ -->
<extension>
	<modules>
		<module>
			<id>becpg-plm-extension</id>
			<auto-deploy>true</auto-deploy>
			<customizations>
				<customization>
		          <targetPackageRoot>org.alfresco.share.header</targetPackageRoot>
		          <sourcePackageRoot>org.alfresco.components.custom-menu-plm</sourcePackageRoot>
		        </customization>
				 <customization>
		          <targetPackageRoot>org.alfresco.share.pages</targetPackageRoot>
		          <sourcePackageRoot>org.alfresco.components.custom-menu-plm</sourcePackageRoot>
		       	  <alwaysApply>
					   <webscript>share-header</webscript>
				   </alwaysApply>
		        </customization>
		        <customization>
					<targetPackageRoot>org.alfresco.modules</targetPackageRoot>
					<sourcePackageRoot>org.alfresco.components.custom-presets-plm</sourcePackageRoot>
				</customization>
				<customization>
					<targetPackageRoot>org.alfresco.components.search</targetPackageRoot>
					<sourcePackageRoot>org.alfresco.components.custom-search</sourcePackageRoot>
				</customization>
				 <customization>
					<targetPackageRoot>org.alfresco.components.entity-charact-views</targetPackageRoot>
					<sourcePackageRoot>org.alfresco.components.custom-views-plm</sourcePackageRoot>
				</customization>
				<customization>
					<targetPackageRoot>org.alfresco.components.wizard</targetPackageRoot>
					<sourcePackageRoot>org.alfresco.components.custom-wizard</sourcePackageRoot>
				</customization>
			</customizations>
		</module>
	</modules>
</extension>  