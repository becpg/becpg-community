	<!-- Product Validation Workflow Definition -->
	<config evaluator="string-compare" condition="activiti$productValidationWF">
		<forms>
			<form>
				<field-visibility>
					<show id="bpm:workflowDescription" />
					<show id="bcpgwf:pvTransmitterComment" />			
					<show id="bcpgwf:pvCallerActor" />
					<show id="bcpgwf:pvQualityApprovalActor" />
					<show id="bcpgwf:pvProductionApprovalActor" />
					<show id="bcpgwf:pvRDApprovalActor" />
					<show id="bpm:workflowDueDate" />
					<show id="bpm:workflowPriority" />
					<show id="packageItems" />
					<show id="bcpgwf:notifyAssignee" />
					<show id="bcpgwf:notifyMe" />
					<show id="bcpgwf:notifyUsers" />					
				</field-visibility>
				<appearance>
					<set id="" appearance="title" label-id="workflow.set.general" />
					<set id="info" appearance=""
						template="/org/alfresco/components/form/2-column-set.ftl" />
					<set id="intervenants" appearance="title" label="Intervenants" 
						template="/org/alfresco/components/form/2-column-set.ftl" />
					<set id="items" appearance="title" label-id="workflow.set.items" />
					<set id="other" appearance="title" label-id="workflow.set.other" />
					
					<field id="bpm:workflowDescription" label-id="workflow.field.message">
						<control template="/org/alfresco/components/form/controls/textarea.ftl">
							<control-param name="style">width: 95%</control-param>
						</control>
					</field>
					<field id="bcpgwf:pvTransmitterComment" >
						<control template="/org/alfresco/components/form/controls/textarea.ftl">
							<control-param name="style">width: 95%</control-param>
						</control>
					</field>
					<field id="bcpgwf:pvCallerActor" set="intervenants" />						
					<field id="bcpgwf:pvQualityApprovalActor" set="intervenants" >
						<control template="/org/alfresco/components/form/controls/authority.ftl">
							<control-param name="extraParams">group=GROUP_QualityMgr</control-param>
						</control>
					</field>
					<field id="bcpgwf:pvProductionApprovalActor" set="intervenants" >
						<control template="/org/alfresco/components/form/controls/authority.ftl">
							<control-param name="extraParams">group=GROUP_ProductionMgr</control-param>
						</control>
					</field>
					<field id="bcpgwf:pvRDApprovalActor" set="intervenants" >
						<control template="/org/alfresco/components/form/controls/authority.ftl">
							<control-param name="extraParams">group=GROUP_RDMgr</control-param>
						</control>
					</field>
					<field id="bpm:workflowDueDate" label-id="workflow.field.due"
						set="info" />
					<field id="bpm:workflowPriority" label-id="workflow.field.priority"
						set="info">
						<control
							template="/org/alfresco/components/form/controls/workflow/priority.ftl" />
					</field>
					<field id="packageItems" set="items" />
					
					<field id="bcpgwf:notifyAssignee" set="other" />
					<field id="bcpgwf:notifyMe" set="other" />
					<field id="bcpgwf:notifyUsers" set="other" />
				</appearance>
			</form>
		</forms>
	</config>

