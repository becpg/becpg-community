	<config evaluator="string-compare" condition="DocLibActions">
		<!-- Action definitions -->
		<actions>

			<action id="entityTpl-synchronize-entities" type="javascript" icon="entity-refresh-reports" label="actions.entityTpl-synchronize-entities">
