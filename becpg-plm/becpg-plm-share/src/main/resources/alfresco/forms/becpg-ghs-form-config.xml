				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="bcpg:charactName" />
					<show id="cm:content" force="true" />
					<show id="bcpg:isDeleted" />
				</field-visibility>
			</form>
		</forms>
	</config>

