<alfresco-config>

	<config evaluator="model-type" condition="pack:labelingTemplate">
		<forms>
			<!-- Create item form -->
			<form>

				<field-visibility>
					<show id="cm:name" />
					<show id="cm:description" force="true" />
				</field-visibility>

				<appearance>
					<field id="cm:description">
						<control template="/org/alfresco/components/form/controls/richtext.ftl">
							<control-param name="editorHeight">4</control-param>
						</control>
					</field>
				</appearance>
			</form>

			<!-- Data Grid view -->
			<form id="filter">
				<field-visibility>
					<show id="cm:name" />
				</field-visibility>
			</form>

			<form id="datagrid">
				<field-visibility>
					<show id="cm:name" />
					<show id="cm:description" force="true" />
					<show id="cm:content"  />
					<show id="fm:commentCount" force="true" />
				</field-visibility>
				<appearance>
					<field id="fm:commentCount" label="hidden" read-only="true" />
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="pack:labelingTemplate">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" />
					<show id="cm:description" force="true" />
						<!-- hide exif:exif -->
					<hide id="exif:dateTimeOriginal" />
					<hide id="exif:pixelXDimension" />
					<hide id="exif:pixelYDimension" />
					<hide id="exif:exposureTime" />
					<hide id="exif:fNumber" />
					<hide id="exif:flash" />
					<hide id="exif:focalLength" />
					<hide id="exif:isoSpeedRatings" />
					<hide id="exif:manufacturer" />
					<hide id="exif:model" />
					<hide id="exif:software" />
					<hide id="exif:orientation" />
					<hide id="exif:xResolution" />
					<hide id="exif:yResolution" />
					<hide id="exif:resolutionUnit" />
				</field-visibility>
				<appearance>
					<field id="cm:description">
						<control template="/org/alfresco/components/form/controls/richtext.ftl">
							<control-param name="editorHeight">4</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="pack:label">
		<forms>
			<!-- Create item form -->
			<form>

				<field-visibility>
					<show id="cm:name" />
					<show id="cm:title" force="true" />
					<show id="pack:labelType" />
					<show id="cm:description" force="true" />
				</field-visibility>
			</form>

			<!-- Data Grid view -->
			<form id="filter">
				<field-visibility>
					<show id="cm:name" />
					<show id="pack:labelType" />
				</field-visibility>
			</form>

			<form id="datagrid">
				<field-visibility>
					<show id="cm:name" />
					<show id="cm:title" force="true" />
					<show id="pack:labelType" />
					<show id="cm:description" force="true" />
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="pack:label">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" />
					<show id="cm:title" force="true" />
					<show id="pack:labelType" />
					<show id="cm:description" force="true" />
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="pack:labelingList">
		<forms>
			<!-- Create item form -->
			<form>

				<field-visibility>
					<show id="pack:llPosition" />
					<show id="pack:llLabel" />
				</field-visibility>
				<appearance>
					<field id="pack:llLabel">
						<control
							template="/org/alfresco/components/form/controls/autocomplete-association.ftl" />
					</field>
				</appearance>
			</form>

			<!-- Data Grid view -->
			<form id="filter">
				<field-visibility>
					<show id="pack:llPosition" />
					<show id="pack:llType" />
				</field-visibility>
				<appearance>
					<field id="pack:llPosition">
					  <control template="/org/alfresco/components/form/controls/selectmany.ftl">
							<control-param name="isSearch">true</control-param>
						</control>
					</field>
					<field id="pack:llType">
					   <control template="/org/alfresco/components/form/controls/selectmany.ftl">
							<control-param name="isSearch">true</control-param>
						</control>
					</field>
				</appearance>
			</form>

			<form id="datagrid">
				<field-visibility>
					<show id="pack:llType" />
					<show id="pack:llPosition" />
					<show id="pack:llLabel" />
					<show id="fm:commentCount" force="true" />
				</field-visibility>
				<appearance>
					<field id="fm:commentCount" label="hidden" read-only="true" />
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="pack:labelingList">
		<forms>
			<form>
				<field-visibility>
					<show id="pack:llPosition" />
					<show id="pack:llLabel" />
				</field-visibility>
				<appearance>
					<field id="pack:llLabel">
						<control
							template="/org/alfresco/components/form/controls/autocomplete-association.ftl" />
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	
	<config evaluator="model-type" condition="pack:packMaterialList">
		<forms>
			<!-- Create item form -->
			<form>
				<field-visibility>
					<show id="pack:pmlMaterial" />
					<show id="pack:pmlWeight" />
				</field-visibility>
				<appearance>
					<field id="pack:pmlMaterial">
						<control template="/org/alfresco/components/form/controls/autocomplete-association.ftl">
							<control-param name="ds">becpg/autocomplete/listvalue/values/System/Lists/bcpg:entityLists/pmMaterials
							</control-param>
						</control>
					</field>
				</appearance>
			</form>

			<form id="datagrid">
				<field-visibility>
					<show id="pack:pmlMaterial" />
					<show id="pack:pmlWeight" />
					<show id="fm:commentCount" force="true" />
				</field-visibility>
				<appearance>
					<field id="fm:commentCount" label="hidden" read-only="true" />
				</appearance>
			</form>
			
			
			<form id="filter">
				<field-visibility>
					<show id="pack:pmlMaterial" />
					<show id="entity_pack:pmlMaterial_bcpg:product"
						for-mode="view" />
				</field-visibility>
				<appearance>
					<field id="pack:pmlMaterial">
						<control template="/org/alfresco/components/form/controls/autocomplete-association.ftl">
							<control-param name="ds">becpg/autocomplete/listvalue/values/System/Lists/bcpg:entityLists/pmMaterials
							</control-param>
						</control>
					</field>
				</appearance>
			</form>
			
			
		</forms>
	</config>

	<config evaluator="node-type" condition="pack:packMaterialList">
		<forms>
			<form>
				<field-visibility>
					<show id="pack:pmlMaterial" />
					<show id="pack:pmlWeight" />
				</field-visibility>
				<appearance>
					<field id="pack:pmlMaterial">
						<control template="/org/alfresco/components/form/controls/autocomplete-association.ftl">
							<control-param name="ds">becpg/autocomplete/listvalue/values/System/Lists/bcpg:entityLists/pmMaterials
							</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	
</alfresco-config>
