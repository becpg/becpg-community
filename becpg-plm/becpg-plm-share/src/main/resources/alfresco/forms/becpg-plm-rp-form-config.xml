      </form>
      <form id="search">
        <field-visibility>
          <show force="false" id="cm:name"/>
          <show force="false" id="bcpg:productHierarchy1"/>
          <show force="false" id="bcpg:productState"/>
          <show force="true" id="bcpg:code"/>
          <show force="true" id="bcpg:erpCode"/>
          <show force="false" id="bcpg:eanCode"/>
        </field-visibility>
