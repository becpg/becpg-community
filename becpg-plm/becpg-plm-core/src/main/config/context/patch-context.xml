   <bean id="patch.bcpg.plm.redeployNPD" class="fr.becpg.repo.admin.patch.PLMWorkflowPatch" parent="basePatch" >
        <property name="id"><value>patch.bcpg.plm.redeployNPD</value></property>
        <property name="description"><value>patch.bcpg.plm.redeployNPD.description</value></property>
        <property name="fixesFromSchema" value="0"/>
        <property name="fixesToSchema" value="6033" />
        <property name="targetSchema" value="10130"/>
        <property name="workflowDefinitions">
            <list>		
				<props>
						<prop key="engineId">activiti</prop>
						<prop key="location">alfresco/module/${pom.artifactId}/workflow/project/project-newProduct.bpmn</prop>
						<prop key="mimetype">text/xml</prop>
