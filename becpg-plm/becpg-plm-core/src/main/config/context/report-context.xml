<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN 2.0//EN' 'http://www.springframework.org/dtd/spring-beans-2.0.dtd'>

<beans>

	
	<!-- Extractor -->
	<bean id="defaultProductReportExtractor" class="fr.becpg.repo.product.report.DefaultProductReportExtractor">
		<property name="dictionaryService" ref="dictionaryService" />
		<property name="nodeService" ref="nodeService" />
		<property name="attributeExtractorService" ref="attributeExtractorService" />
		<property name="namespaceService" ref="namespaceService" />
		<property name="alfrescoRepository" ref="alfrescoRepository" />
		<property name="productDictionaryService" ref="productDictionaryService"/>
		<property name="entityService" ref="entityService"/>
		<property name="mlNodeService" ref="mlAwareNodeService" />
		<property name="fileFolderService" ref="fileFolderService" />
		<property name="versionService" ref="versionService"/>
		<property name="associationService" ref="associationService"/>
		<property name="repositoryEntityDefReader" ref="repositoryEntityDefReader"/>
	</bean>

	
	
	<bean id="defaultExtractorPlugin" class="fr.becpg.repo.report.entity.ExtractorPlugin" init-method="init">
		<property name="entityReportService" ref="entityReportService"/>
		<property name="extractor" ref="defaultProductReportExtractor"/>
		<property name="typeName" value="default"/>
	</bean>
	
	
		<!-- Search report -->	
	<bean id="exportSearchService" class="fr.becpg.repo.report.search.ExportSearchServiceImpl">
		<property name="nodeService" ref="nodeService" />
		<property name="contentService" ref="contentService" />
		<property name="beCPGReportEngine" ref="beCPGReportEngine" />
		<property name="namespaceService" ref="namespaceService" />
		<property name="entityListDAO" ref="entityListDAO" />
		<property name="beCPGSearchService" ref="beCPGSearchService" />
		<property name="entityService" ref="entityService" />
		<property name="attributeExtractorService" ref="attributeExtractorService"/>		
		<property name="dictionaryService" ref="dictionaryService" />
	</bean>
	
		<!-- Export search -->
	<bean id="webscript.fr.becpg.report.exportSearch.get" class="fr.becpg.repo.web.scripts.report.ExportSearchWebScript" parent="webscript">
		<property name="exportSearchService" ref="exportSearchService" />
		<property name="mimetypeService" ref="MimetypeService" />
		<property name="advSearchService" ref="AdvSearchService" />
		<property name="namespaceService" ref="NamespaceService" />
		<property name="reportTplService" ref="reportTplService" />
	</bean>
	
 
	
</beans>
