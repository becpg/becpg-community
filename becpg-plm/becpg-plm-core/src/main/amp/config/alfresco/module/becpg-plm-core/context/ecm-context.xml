<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN 2.0//EN' 'http://www.springframework.org/dtd/spring-beans-2.0.dtd'>

<beans>

	
	<!-- ecoService -->	
	<bean id="ecoService" class="fr.becpg.repo.ecm.impl.ECOServiceImpl">
    	<property name="wUsedListService" ref="wUsedListService"/>
    	<property name="nodeService" ref="nodeService"/>
    	<property name="entityVersionService" ref="entityVersionService"/>
    	<property name="productService" ref="productService"/>
    	<property name="alfrescoRepository" ref="alfrescoRepository" />
    	<property name="transactionService" ref="transactionService" />
	</bean>
	
  
  <!-- ChangeOrder Webscript -->
  <bean id="webscript.fr.becpg.ecm.changeOrder.get" class="fr.becpg.repo.web.scripts.ecm.ChangeOrderWebScript" parent="webscript">
      	<property name="ecoService" ref="ecoService" />
      	<property name="asyncECOService" ref="asyncECOService"/>
      	<property name="automaticECOService" ref="automaticECOService"/>
      	<property name="alfrescoRepository" ref="alfrescoRepository"/>
      	<property name="nodeService" ref="NodeService"/>
   	</bean>
   	
   	<alias alias="webscript.fr.becpg.ecm.changeOrder.post" name="webscript.fr.becpg.ecm.changeOrder.get"/>
   	
   	<!--  Policies -->
   	<bean id="automaticECOPolicy" class="fr.becpg.repo.ecm.policy.AutomaticECOPolicy"
		parent="abstractBeCPGPolicy" >
		<property name="automaticECOService" ref="automaticECOService"/>
		<property name="entityVersionService" ref="entityVersionService"></property>
		<property name="enable" value="${beCPG.eco.automatic.enable}"/>
		<property name="automaticRecordVersionType" value="${beCPG.eco.automatic.record.version.type}"/>
	</bean>
	
	<!-- Cron -->
	<bean id="ecoAsyncThreadPool" class="org.alfresco.util.ThreadPoolExecutorFactoryBean">
        <property name="poolName">
            <value>ecoAsyncThreadPool</value>
        </property>
        <property name="corePoolSize">
            <value>1</value>
        </property>
        <property name="maximumPoolSize">
            <value>5</value>
        </property>
        <property name="threadPriority">
            <value>1</value>
        </property>
    </bean>
	
	
	 <bean id="automaticECOJob" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass">
            <value>fr.becpg.repo.ecm.AutomaticECOJob</value>
        </property>
        <property name="jobDataAsMap">
            <map>
                <entry key="automaticECOService">
                    <ref bean="automaticECOService" />
                </entry>
                <entry key="tenantAdminService">
                    <ref bean="tenantAdminService" />
                </entry>
            </map>
        </property>
    </bean>
    
    <bean id="automaticECOJobTrigger" class="org.alfresco.util.CronTriggerBean"  >
        <property name="jobDetail">
            <ref bean="automaticECOJob"/>
        </property>
        <property name="scheduler">
            <ref bean="schedulerFactory"/>
        </property>
        <property name="cronExpression">
            <value>${beCPG.eco.automatic.cron}</value>
        </property>
    </bean>
   
</beans>
