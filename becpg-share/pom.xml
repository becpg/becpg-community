<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>becpg-parent</artifactId>
		<groupId>fr.becpg</groupId>
		<version>1.6.0</version>
		<relativePath>../</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>becpg-share</artifactId>
	<packaging>amp</packaging>
	<name>beCPG vault share</name>
	<description>beCPG Share designer ui</description>
	<dependencies>
	 	 <dependency>
            <groupId>org.alfresco</groupId>
            <artifactId>alfresco-repository</artifactId>
            <version>${alfresco.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.alfresco</groupId>
            <artifactId>alfresco-remote-api</artifactId>
            <version>${alfresco.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.alfresco</groupId>
            <artifactId>alfresco-share</artifactId>
            <version>${alfresco.version}</version>
            <scope>provided</scope>
            <exclusions>
	            <exclusion>
	            	<groupId>org.alfresco</groupId>
	            	<artifactId>alfresco-web-framework-commons</artifactId>
            	</exclusion>
            </exclusions>
       </dependency>    
	</dependencies>
	<properties>
        <alfresco.amp.config.dir>alfresco/module/${project.artifactId}/config</alfresco.amp.config.dir>
    </properties>
	<build>
		<plugins>
			<!-- YUI Compressor -->
			<plugin>
				<groupId>net.alchim31.maven</groupId>
				<artifactId>yuicompressor-maven-plugin</artifactId>
				<version>1.3.2</version>
				<executions>
					<execution>
						<goals>
							<goal>compress</goal>
						</goals>
					</execution>
				</executions>
				<configuration>		
					<jswarn>false</jswarn>		
					<excludes>
						<exclude>**/entity-details.js</exclude>
						<exclude>**/alfresco-util.js</exclude>
						<exclude>**/*.get.js</exclude>
						<exclude>**/*.lib.js</exclude>
					</excludes>
				</configuration>
			</plugin>	
		</plugins>
	</build>
</project>
