<alfresco-config>

	<!-- ************************************** -->
	<!-- Workflow Definition Form Configuration -->
	<!-- ************************************** -->

	<!-- When workflows are started some bpm:workflowXxx properties are copied 
		to the task and named bpm:xxx I.e The bpm:workflowDueDate workflow property 
		becomes the bpm:dueDate task property. -->


	<!-- ************************************************ -->
	<!-- New Product Development Workflow Definition -->
	<!-- ************************************************ -->

	<!-- Initiate task -->
	<config evaluator="string-compare" condition="jbpm$npdwf:newProductDevelopmentWF">
		<forms>
			<form>
				<field-visibility>
					<show id="npdwf:npdProductName" />
					<show id="npdwf:npdType" />
					<show id="npdwf:npdStatus" />
					<show id="npdwf:npdFolder" />
					<show id="bpm:workflowDueDate" />
					<show id="bpm:workflowPriority" />					

					<show id="npdwf:cftTransmitter" />
					<show id="npdwf:cftSubsidiary" />
					<show id="npdwf:cftOpeningDate" />
					<show id="npdwf:cftSamplingDate" />
					<show id="npdwf:cftLaunchDateDesired" />
					<show id="npdwf:cftResponseDateDesired" />
					<show id="npdwf:cftNotify" />
					<show id="npdwf:cftClient" />
					<show id="npdwf:cftRequirements" />
					<show id="npdwf:volumeForecast" />
					<show id="npdwf:unitPrice" />
					<show id="npdwf:priceCurrency" />
					<show id="packageItems" />
					<show id="transitions" />

				</field-visibility>
				<appearance>
					
					<!-- Demande d'Ã©tude -->
					<set id="info" appearance="title"
						template="/org/alfresco/components/form/2-column-set.ftl"
						label-id="becpg.forms.set.npd-wf.label" />					
					<field id="npdwf:npdProductName" set="info" label-id="becpg.forms.set.product-name.label" />
					<field id="npdwf:npdType" set="info" label-id="becpg.forms.set.npd-type.label" />
					<field id="npdwf:npdStatus" set="info" label-id="becpg.forms.set.npd-status.label">
						<control template="/org/alfresco/components/form/controls/info.ftl" />
					</field>
					<field id="bpm:workflowDueDate" label-id="workflow.field.due"
						set="info" />
					<field id="bpm:workflowPriority" label-id="workflow.field.priority"
						set="info">
						<control
							template="/org/alfresco/components/form/controls/workflow/priority.ftl" />
					</field>
					
					<!-- Appel d'offre -->
					<set id="cft" appearance="title" label-id="becpg.forms.set.cft.label"
						template="/fr/becpg/components/form/2-column-set.ftl" />
					<set id="requirements" appearance="" />
					<set id="price" appearance="title"
						template="/org/alfresco/components/form/2-column-set.ftl" label-id="becpg.forms.set.price-info.label" />
					<set id="volume" appearance="title" label-id="becpg.forms.set.volume-forecast.label" />
					<set id="description" appearance="title" label-id="workflow.set.task.info" />

					<field id="npdwf:cftTransmitter" set="cft" label-id="becpg.forms.set.transmitter.label" />
					<field id="npdwf:cftCompany" set="cft" label-id="becpg.forms.set.company.label" />
					<field id="npdwf:cftOpeningDate" set="cft" label-id="becpg.forms.set.opening-date.label" />
					<field id="npdwf:cftSamplingDate" set="cft" label-id="becpg.forms.set.sampling-date.label" />
					<field id="npdwf:cftLaunchDateDesired" set="cft"
						label-id="becpg.forms.set.launch-dateDesired.label" />
					<field id="npdwf:cftResponseDateDesired" set="cft"
						label-id="becpg.forms.set.response-dateDesired.label" />
					<field id="npdwf:cftResponseDateRealized" set="cft"
						label-id="becpg.forms.set.response-dateRealized.label" />
					<field id="npdwf:cftNotify" set="cft" label-id="becpg.forms.set.npd-notify.label" />
					<field id="npdwf:cftSubsidiary" set="cft" label-id="becpg.forms.set.subsidiary.label">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl" />
					</field>
					<field id="npdwf:cftClient" set="cft" label-id="becpg.forms.set.client.label">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl" />
					</field>
					<field id="npdwf:cftRequirements" set="requirements"
						label-id="becpg.forms.set.npd-requirement.label">
						<control template="/org/alfresco/components/form/controls/textarea.ftl">
							<control-param name="style">width: 95%</control-param>
							<control-param name="rows">4</control-param>
						</control>
					</field>
					<field id="npdwf:unitPrice" set="price" label-id="becpg.forms.set.unit-price.label" />
					<field id="npdwf:priceCurrency" set="price" label-id="becpg.forms.set.price-currency.label" />
					<field id="npdwf:volumeForecast" set="volume" label-id="becpg.forms.set.volume-forecast.label">
						<control template="/org/alfresco/components/form/controls/textarea.ftl">
							<control-param name="style">width: 95%</control-param>
							<control-param name="rows">4</control-param>
						</control>
					</field>
					
					<!-- Documents -->
					<set id="items" appearance="title" label-id="becpg.forms.set.documents.label" />					
					<field id="npdwf:npdFolder" set="items" label-id="becpg.forms.set.npd-folder.label" >
						<control template="/org/alfresco/components/form/controls/association.ftl">
							<control-param name="startLocation">{siteshome}</control-param>
						</control>
					</field>
					<field id="packageItems" set="items" label-id="becpg.forms.set.brief-documents.label" >
						<control template="/org/alfresco/components/form/controls/workflow/packageitems.ftl">
							<control-param name="startLocation">{siteshome}</control-param>
						</control>
					</field>

				</appearance>
			</form>
		</forms>
	</config>

