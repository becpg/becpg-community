<alfresco-config>

	<!-- sec:aclGroup type  -->
	<config evaluator="node-type" condition="sec:aclGroup">
		<forms>
			<form >
				<field-visibility>
					<show id="cm:name" />
					<show id="sec:nodeType" />
					<!-- <show id="sec:nodeAspects" /> -->
				</field-visibility>
			</form>
			
		</forms>
	</config>
	
	<config evaluator="model-type" condition="sec:aclGroup">
		<forms>
			<form >
				<field-visibility>
					<show id="cm:name" />
					<show id="sec:nodeType" />
				</field-visibility>
			</form>
			
		</forms>
	</config>
	

	<!-- sec:aclEntry type -->
	
	<config evaluator="node-type" condition="sec:aclEntry">
		<forms>
			<form>
				<field-visibility>
					<show id="sec:aclPermission" />
					<show id="sec:propName" />
					<show id="sec:groupsAssignee" />
				</field-visibility>
				<appearance>
					<field id="sec:propName">
						<control template="/org/alfresco/components/form/controls/autocomplete.ftl">
							<control-param name="ds">components/security/autocomplete</control-param>
							<control-param name="local">true</control-param>
							<control-param name="saveTitle">false</control-param>
						</control>
					</field>
					<field id="sec:aclPermission"/>
				</appearance>
			</form>
		</forms>
	</config>
	
	<config evaluator="model-type" condition="sec:aclEntry">
		<forms>
			<form>
				<field-visibility>
					<show id="sec:aclPermission" />
					<show id="sec:propName" />
					<show id="sec:groupsAssignee" />
				</field-visibility>
				<appearance>
					<field id="sec:propName">
						<control template="/org/alfresco/components/form/controls/autocomplete.ftl">
							<control-param name="ds">components/security/autocomplete</control-param>
							<control-param name="local">true</control-param>
							<control-param name="saveTitle">false</control-param>
						</control>
					</field>
					<field id="sec:aclPermission">
						<control
							template="/org/alfresco/components/form/controls/selectone.ftl" >
							 <control-param name="options">read|Lecture seule,write|Lecture et Ã©criture</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="sec:aclPermission" />
					<show id="sec:propName" />
					<show id="sec:groupsAssignee" />
				</field-visibility>
			</form>
		</forms>
	</config>
	
</alfresco-config>