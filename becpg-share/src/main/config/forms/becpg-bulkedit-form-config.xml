<alfresco-config>

	<config evaluator="model-type" condition="sec:aclGroup">
		<forms>
			<form id="bulk-edit">
				<field-visibility>
					<show id="cm:name" />
					<show id="sec:nodeType" />
					<show id="sec:nodeAspects" />
				</field-visibility>
			</form>
		</forms>
	</config>
	
	<config evaluator="model-type" condition="cm:content">
		<forms>
			<form id="bulk-edit">
				<field-visibility>
					<show id="cm:name" />
					<show force="true" id="cm:title" />
					<show force="true" id="cm:description" />
				</field-visibility>
			</form>
		</forms>
	</config>
	

</alfresco-config>
