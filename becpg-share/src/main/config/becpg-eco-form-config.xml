					<field id="eco:targetItem">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl" />
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	
	<!-- eco:wUsedList type -->
	<config evaluator="model-type" condition="eco:wUsedList">
