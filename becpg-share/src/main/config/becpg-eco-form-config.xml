<alfresco-config>
	
	<!-- eco:changeOrder type (creating nodes nodes) -->
	<config evaluator="model-type" condition="eco:changeOrder">
		<forms>

			<form id="create">
				<field-visibility>
					<show id="cm:name" />
					<show id="cm:description" />
					<show id="cm:titled" />
					
					<show id="eco:effectiveDate" />
					<show id="eco:ecoType" />
					<show id="eco:calculatedCharacts" />							
															
				</field-visibility>
				<appearance>
					<field id="cm:description">
						<control template="/fr/becpg/components/form/controls/textarea.ftl">
							<control-param name="rows">3</control-param>
						</control>
					</field>		
					<field id="eco:ecoType">
						<control
							template="/org/alfresco/components/form/controls/selectone.ftl" >
							 <control-param name="options">Replacement|Remplacement, Simulation|Simulation, Variant|Variante</control-param>
						</control>
					</field>					
				</appearance>
			</form>

		</forms>
	</config>
	
	<!-- eco:changeOrder (existing nodes) -->
	<config evaluator="node-type" condition="eco:changeOrder">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" />
					<show id="cm:description" />
					<show id="cm:titled" />
					
					<show id="eco:ecoState" />
					<show id="eco:effectiveDate" />
					<show id="eco:ecoType" />
					<show id="eco:calculatedCharacts" />							
					
					<!-- auditable -->
					<show id="cm:creator" for-mode="view" />
					<show id="cm:created" for-mode="view" />
					<show id="cm:modifier" for-mode="view" />
					<show id="cm:modified" for-mode="view" />								
				</field-visibility>
				<appearance>
					<field id="cm:description">
						<control template="/fr/becpg/components/form/controls/textarea.ftl">
							<control-param name="rows">3</control-param>
						</control>
					</field>		
					<field id="eco:ecoState">
						<control
							template="/org/alfresco/components/form/controls/selectone.ftl" >
							 <control-param name="options">ToValidate|A valider,Valid|Validé,Refused|Refusé,ToCalculateWUsed|Calculer les cas d'emploi,WUsedCalculated|Cas d'emploi calculés,ToSimulate|A simuler,Simulated|Simulé,ToApply|A appliquer,Applied|Appliqué</control-param>
						</control>
					</field>
					<field id="eco:ecoType">
						<control
							template="/org/alfresco/components/form/controls/selectone.ftl" >
							 <control-param name="options">Replacement|Remplacement, Simulation|Simulation, Variant|Variante</control-param>
						</control>
					</field>					
				</appearance>
			</form>
		</forms>
	</config>	
	
	<!-- eco:replacementList type -->
	<config evaluator="model-type" condition="eco:replacementList">
		<forms>
			<!-- Create item form -->
			<form>
				<field-visibility>
					<show id="eco:revisionType" />
					<show id="eco:sourceItem" />
					<show id="eco:targetItem" />					
				</field-visibility>
				<create-form template="../data-lists/forms/bulkdataitem.ftl" />
				<appearance>
					<field id="eco:revisionType">
						<control
							template="/org/alfresco/components/form/controls/selectone.ftl" >
							 <control-param name="options">NoRevision|Sans révision,Minor|Mineure,Major|Majeure</control-param>
						</control>
					</field>						
					<field id="eco:sourceItem">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl" />
					</field>
					<field id="eco:targetItem">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl" />
					</field>
				</appearance>
			</form>
			<!-- Data Grid view -->
			<form id="datagrid">
				<field-visibility>
					<show id="eco:revisionType" />
					<show id="eco:sourceItem" />
					<show id="eco:targetItem" />
				</field-visibility>
			</form>
		</forms>
	</config>
	<!-- eco:replacementList type (existing nodes) -->
	<config evaluator="node-type" condition="eco:replacementList">
		<forms>
			<!-- Data List pop-up edit form -->
			<form>
				<field-visibility>
					<show id="eco:revisionType" />
					<show id="eco:sourceItem" />
					<show id="eco:targetItem" />
				</field-visibility>
				<edit-form template="../data-lists/forms/bulkdataitem.ftl" />
				<appearance>
					<field id="eco:revisionType">
						<control
							template="/org/alfresco/components/form/controls/selectone.ftl" >
							 <control-param name="options">NoRevision|Sans révision,Minor|Mineure,Major|Majeure</control-param>
						</control>
					</field>
					<field id="eco:sourceItem">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl" />
					</field>
					<field id="eco:targetItem">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl" />
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	
	<!-- eco:wUsedList type -->
	<config evaluator="model-type" condition="eco:wUsedList">
		<forms>
			<!-- Create item form -->
			<form>
				<field-visibility>
					<show id="eco:impactedDataList" />
					<show id="eco:isWUsedImpacted" />
					<show id="eco:wulSourceItem" />										
				</field-visibility>
				<create-form template="../data-lists/forms/bulkdataitem.ftl" />
			</form>
			<!-- Data Grid view -->
			<form id="datagrid">
				<field-visibility>
					<show id="bcpg:depthLevel" />
					<show id="eco:impactedDataList" />
					<show id="eco:isWUsedImpacted" />
					<show id="eco:wulSourceItem" />				
				</field-visibility>
			</form>
		</forms>
	</config>
	<!-- eco:wUsedList type (existing nodes) -->
	<config evaluator="node-type" condition="eco:wUsedList">
