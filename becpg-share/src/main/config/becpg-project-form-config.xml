						</control>
					</field>					
					<field id="pjt:projectCompletionDate" read-only="true" />
					<field id="pjt:projectPriority">
						<control
							template="/org/alfresco/components/form/controls/workflow/priority.ftl" />
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	<config condition="pjt:taskLegend" evaluator="node-type">
