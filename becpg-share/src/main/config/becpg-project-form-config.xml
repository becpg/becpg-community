				</field-visibility>
				<appearance>
					<field id="bcpg:parentLevel">
						<control
							template="/fr/becpg/components/form/controls/autocomplete.ftl">
 							<control-param name="ds">becpg/autocomplete/ParentLevel
 							</control-param>	
							<control-param name="showTooltip">false</control-param>
							<control-param name="urlParamsToPass">list</control-param>
						</control>
 					</field> 
					<field id="cm:title" mandatory="false" read-only="false" />
					<field id="pjt:plPrevTasks" mandatory="false" read-only="false" />					
					<field id="pjt:plIsMilestone" mandatory="false" read-only="false" />
					<field id="pjt:plDuration" mandatory="false" read-only="false" />
					<field id="pjt:plWorkflowName" mandatory="false" read-only="false" />					
