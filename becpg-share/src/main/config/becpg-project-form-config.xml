<?xml version="1.0" encoding="UTF-8"?>
<alfresco-config>
	<config condition="pjt:projectTpl" evaluator="node-type">
		<forms>
			<form>
				<field-visibility />
				<appearance />
			</form>
		</forms>
	</config>
	<config condition="pjt:projectTpl" evaluator="model-type">
		<forms>
			<form>
				<field-visibility>
					<show force="false" id="cm:name" />
				</field-visibility>
				<appearance>
					<field id="cm:name" mandatory="false" read-only="false" />
				</appearance>
			</form>
		</forms>
	</config>
	<config condition="pjt:project" evaluator="node-type">
		<forms>
			<form>
				<field-visibility>
					<show force="false" id="pjt:projectHierarchy1" />
					<show force="false" id="pjt:projectProjectTpl" />
				</field-visibility>
				<appearance>
					<field id="pjt:projectHierarchy1" mandatory="false"
						read-only="false" />
					<field id="pjt:projectProjectTpl" mandatory="false"
						read-only="false" />
				</appearance>
			</form>
		</forms>
	</config>
	<config condition="pjt:project" evaluator="model-type">
		<forms>
			<form>
				<field-visibility>
					<show force="false" id="pjt:projectHierarchy1" />
					<show force="false" id="pjt:projectProjectTpl" />
					<show force="false" id="cm:name" />
				</field-visibility>
				<appearance>
					<field id="pjt:projectHierarchy1" mandatory="false"
						read-only="false" />
					<field id="pjt:projectProjectTpl" mandatory="false"
						read-only="false" />
					<field id="cm:name" mandatory="false" read-only="false" />
				</appearance>
			</form>
		</forms>
	</config>
	<config condition="pjt:taskLegend" evaluator="node-type">
		<forms>
			<form>
				<field-visibility>
					<show force="false" id="cm:name" />
					<show force="false" id="bcpg:color" />
				</field-visibility>
				<appearance>
					<field id="cm:name" mandatory="false" read-only="false" />
					<field id="bcpg:color" mandatory="false" read-only="false">
						<control
							template="/org/alfresco/components/form/controls/selectcolorpicker.ftl" />
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	<config condition="pjt:taskLegend" evaluator="model-type">
		<forms>
			<form>
				<field-visibility>
					<show force="false" id="cm:name" />
					<show force="false" id="bcpg:color" />
				</field-visibility>
				<appearance>
					<field id="cm:name" mandatory="false" read-only="false" />
					<field id="bcpg:color" mandatory="false" read-only="false">
						<control
							template="/org/alfresco/components/form/controls/selectcolorpicker.ftl" />
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	<config condition="pjt:task" evaluator="node-type">
		<forms>
			<form>
				<field-visibility />
				<appearance />
			</form>
		</forms>
	</config>
	<config condition="pjt:task" evaluator="model-type">
		<forms>
			<form>
				<field-visibility>
					<show force="false" id="cm:name" />
				</field-visibility>
				<appearance>
					<field id="cm:name" mandatory="false" read-only="false" />
				</appearance>
			</form>
		</forms>
	</config>
	<config condition="pjt:taskList" evaluator="node-type">
		<forms>
			<form>
				<field-visibility>
					<show force="false" id="pjt:tlTaskName" />
					<show force="false" id="pjt:tlIsMilestone" />
					<show force="false" id="pjt:tlDuration" />
					<show force="false" id="pjt:tlWorkflowName" />
					<show force="true" id="pjt:tlPrevTasks" />
					<show force="true" id="pjt:tlResources" />
					<show force="false" id="pjt:tlTaskLegend" />
					<show force="false" id="pjt:tlState" />
					<show force="false" id="pjt:tlStart" />
					<show force="false" id="pjt:tlEnd" />
					<show force="false" id="pjt:completionPercent" />
				</field-visibility>
				<appearance>
					<field id="pjt:tlTaskName" mandatory="false" read-only="false" />
					<field id="pjt:tlIsMilestone" mandatory="false" read-only="false" />
					<field id="pjt:tlDuration" mandatory="false" read-only="false" />
					<field id="pjt:tlWorkflowName" mandatory="false" read-only="false" >
						<control template="/org/alfresco/components/form/controls/selectone.ftl">
							<control-param name="options">,activiti$projectAdhoc|Adhoc
							</control-param>
						</control>
					</field>
					<field id="pjt:tlPrevTasks" mandatory="false" read-only="false">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl">
							<control-param name="ds">becpg/autocomplete/TaskValue?className=pjt:taskList
							</control-param>
							<control-param name="showTooltip">false</control-param>
						</control>
					</field>
					<field id="pjt:tlResources" mandatory="false" read-only="false" />
					<field id="pjt:tlTaskLegend" mandatory="false" read-only="false" />
					<field id="pjt:tlState" mandatory="false" read-only="false" />
					<field id="pjt:tlStart" mandatory="false" read-only="false" />
					<field id="pjt:tlEnd" mandatory="false" read-only="false" />
					<field id="pjt:completionPercent" mandatory="false"
						read-only="false" />
				</appearance>
			</form>
		</forms>
	</config>
	<config condition="pjt:taskList" evaluator="model-type">
		<forms>
			<form>
				<field-visibility>
					<show force="false" id="pjt:tlTaskName" />
					<show force="false" id="pjt:tlIsMilestone" />
					<show force="false" id="pjt:tlDuration" />
					<show force="false" id="pjt:tlWorkflowName" />
					<show force="true" id="pjt:tlPrevTasks" />
					<show force="true" id="pjt:tlResources" />
					<show force="false" id="pjt:tlTaskLegend" />
					<show force="false" id="pjt:tlState" />
					<show force="false" id="pjt:tlStart" />
					<show force="false" id="pjt:tlEnd" />
					<show force="false" id="pjt:completionPercent" />
				</field-visibility>
				<appearance>
					<field id="pjt:tlTaskName" mandatory="false" read-only="false" />
					<field id="pjt:tlIsMilestone" mandatory="false" read-only="false" />
					<field id="pjt:tlDuration" mandatory="false" read-only="false" />
					<field id="pjt:tlWorkflowName">
						<control template="/org/alfresco/components/form/controls/selectone.ftl">
							<control-param name="options">,activiti$projectAdhoc|Adhoc
							</control-param>
						</control>
					</field>
					<field id="pjt:tlPrevTasks" mandatory="false" read-only="false">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl">
							<control-param name="ds">becpg/autocomplete/TaskValue?className=pjt:taskList
							</control-param>
							<control-param name="showTooltip">false</control-param>
						</control>
					</field>
					<field id="pjt:tlResources" mandatory="false" read-only="false" />
					<field id="pjt:tlTaskLegend" mandatory="false" read-only="false" />
					<field id="pjt:tlState" mandatory="false" read-only="false" />
					<field id="pjt:tlStart" mandatory="false" read-only="false" />
					<field id="pjt:tlEnd" mandatory="false" read-only="false" />
					<field id="pjt:completionPercent" mandatory="false"
						read-only="false" />
				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show force="false" id="pjt:tlTaskName" />
					<show force="false" id="pjt:tlIsMilestone" />
					<show force="false" id="pjt:tlDuration" />
					<show force="true" id="pjt:tlPrevTasks" />
					<show force="true" id="pjt:tlResources" />
					<show force="false" id="pjt:tlTaskLegend" />
					<show force="false" id="pjt:tlState" />
					<show force="false" id="pjt:completionPercent" />
				</field-visibility>
			</form>
		</forms>
	</config>
	<config condition="pjt:deliverableList" evaluator="node-type">
		<forms>
			<form>
				<field-visibility>
					<show force="true" id="pjt:dlDescription" />
					<show force="false" id="pjt:dlTask" />
					<show force="false" id="pjt:dlState" />
				</field-visibility>
				<appearance>
