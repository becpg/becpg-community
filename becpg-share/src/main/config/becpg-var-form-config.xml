<alfresco-config>	

	<config evaluator="node-type" condition="var:charact">
		<forms>
			<!-- Data List pop-up edit form -->
			<form>
				<field-visibility>
					<show id="cm:name" />
					<show id="cm:titled" />
					<show id="cm:description" />
					<show id="var:charactKey" />
				</field-visibility>				
			</form>
		</forms>
	</config>
	
	<!-- var:propertyVariantList type -->
	<config evaluator="model-type" condition="var:propertyVariantList">
		<forms>
			<!-- Create item form -->
			<form>
				<field-visibility>
					<show id="var:pvlPartner" />
					<show id="var:pvlCharact" />
					<show id="var:pvlValue" />
				</field-visibility>
				<create-form template="../data-lists/forms/bulkdataitem.ftl" />
				<appearance>			
					<field id="var:pvlPartner">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl" >
								<control-param name="ds">becpg/autocomplete/targetassoc/associations/bcpg:entity?classNames=bcpg:client,bcpg:supplier</control-param>
							</control>
					</field>
					<field id="var:pvlCharact">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl" />
					</field>		
				</appearance>
			</form>			
		</forms>
	</config>
	<!-- var:propertyVariantList type (existing nodes) -->
	<config evaluator="node-type" condition="var:propertyVariantList">
		<forms>
			<!-- Data List pop-up edit form -->
			<form>
				<field-visibility>
					<show id="var:pvlPartner" />
					<show id="var:pvlCharact" />
					<show id="var:pvlValue" />
				</field-visibility>
				<edit-form template="../data-lists/forms/bulkdataitem.ftl" />
				<appearance>					
					<field id="var:pvlPartner">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl" >
								<control-param name="ds">becpg/autocomplete/targetassoc/associations/bcpg:entity?classNames=bcpg:client,bcpg:supplier</control-param>
							</control>
					</field>
					<field id="var:pvlCharact">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl" />
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	
	
</alfresco-config>