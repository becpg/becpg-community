<alfresco-config>
	
	<!-- rep:reportTpl (existing nodes) -->
	<config evaluator="node-type" condition="rep:reportTpl">
		<forms>
			<form id="create">
				<field-visibility>
					<show id="cm:name" />
					<show id="cm:description" />
					<show id="cm:titled" />
					
					<show id="rep:reportTplType" />
					<show id="rep:reportTplClassType" />
					<show id="rep:reportTplIsSystem" />
					<show id="rep:reportTplIsDefault" />
					<show id="rep:reportTplFormat" />					
					
					<!-- auditable -->
					<show id="cm:creator" for-mode="view" />
					<show id="cm:created" for-mode="view" />
					<show id="cm:modifier" for-mode="view" />
					<show id="cm:modified" for-mode="view" />								
				</field-visibility>
				<appearance>
					<field id="cm:description">
						<control template="/fr/becpg/components/form/controls/textarea.ftl">
							<control-param name="rows">3</control-param>
						</control>
					</field>									
				</appearance>
			</form>
		</forms>
	</config>
	
</alfresco-config>