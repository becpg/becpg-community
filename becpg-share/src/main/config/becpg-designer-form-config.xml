<alfresco-config>


	
	<config evaluator="node-type" condition="dsg:form">
		<forms>
			<form>
				<field-visibility>
					<show id="dsg:id" />
					<show id="dsg:submissionUrl" />
				</field-visibility>
				<appearance>
					<set id="mainInfo" appearance="bordered-panel" label="Informations" />
					<field id="dsg:id" set="mainInfo" />
					<field id="dsg:submissionUrl" set="mainInfo" />
				</appearance>
			</form>
		</forms>
	</config>
	
	
	<config evaluator="node-type" condition="dsg:formSet">
		<forms>
			<form>
				<field-visibility>
					<show id="dsg:id" />
					<show id="dsg:label" />
					<show id="dsg:labelId" />
					<show id="dsg:appearance" />
					<show id="dsg:templatePath" />
				</field-visibility>
				<appearance>
					<set id="mainInfo" appearance="bordered-panel" label="Informations" />
					<field id="dsg:id" set="mainInfo"/>
					<field id="dsg:label" set="mainInfo" />
					<field id="dsg:labelId" set="mainInfo" />
					<field id="dsg:appearance" set="mainInfo" />
					<field id="dsg:templatePath" set="mainInfo" />
				</appearance>
			</form>
		</forms>
	</config>
	
	<config evaluator="node-type" condition="dsg:formField">
		<forms>
			<form>
				<field-visibility>
					<show id="dsg:id" />
					<show id="dsg:label" />
					<show id="dsg:labelId" />
					<show id="dsg:description" />
					<show id="dsg:descriptionId" />
					<show id="dsg:help" />
					<show id="dsg:helpId" />
					<show id="dsg:readOnly" />
					<show id="dsg:mandatory" />
					<show id="dsg:hide" />
					<show id="dsg:force" />
					<show id="dsg:forMode" />
				</field-visibility>
				<appearance>
					<set id="mainInfo" appearance="bordered-panel" label="Information" />
					<set id="appearanceInfo" appearance="bordered-panel" label="Apparance" />
					<set id="visibilityInfo" appearance="bordered-panel" label="VisibilitÃ©" />
					<field id="dsg:hide" set="visibilityInfo"  />
					<field id="dsg:force" set="visibilityInfo" />
					<field id="dsg:forMode" set="visibilityInfo" />
					<field id="dsg:id" set="mainInfo"/>
					<field id="dsg:label" set="mainInfo" />
					<field id="dsg:labelId" set="mainInfo" />
					<field id="dsg:description" set="appearanceInfo"/>
					<field id="dsg:descriptionId" set="appearanceInfo" />
					<field id="dsg:help" set="appearanceInfo"/>
					<field id="dsg:helpId" set="appearanceInfo"/>
					<field id="dsg:readOnly" set="appearanceInfo"/>
					<field id="dsg:mandatory" set="appearanceInfo" />
				</appearance>
			</form>
		</forms>
	</config>
	
	<!-- Extension form -->

	<config evaluator="node-type" condition="ext1:customType">
	   <forms>
	      <form>
	         <field-visibility>
	            <hide id="cm:content" />
	            <hide id="cm:name" />
	            <hide id="cm:created" />
	            <hide id="cm:creator" />
	            <hide id="cm:accessed" />
	            <hide id="cm:modifier" />
	            <hide id="bcpg:startEffectivity"/>
	            <hide id="bcpg:endEffectivity"/>
	         </field-visibility>
	      </form>
	   </forms>
	</config>
	
	<config evaluator="model-type" condition="ext1:customType">
	   <forms>
	      <form id="create">
	         <field-visibility>
	            <hide id="cm:content" />
	            <hide id="cm:name" />
	            <hide id="cm:created" />
	            <hide id="cm:creator" />
	            <hide id="cm:modified" />
	            <hide id="cm:modifier" />
	            <hide id="cm:accessed" />
	            <hide id="bcpg:startEffectivity"/>
	            <hide id="bcpg:endEffectivity"/>
	         </field-visibility>
	      </form>
	   </forms>
	</config>
	
	
	<config evaluator="aspect" condition="ext1:customAspect">
	   <forms>
	      <form>
	         <field-visibility>
	            <hide id="cm:content" />
	         </field-visibility>
	      </form>
	   </forms>
	</config>


</alfresco-config>