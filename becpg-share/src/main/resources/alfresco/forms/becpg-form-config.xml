            </appearance>
         </form>
         
         <form id="wizard-doclib-simple-metadata">
            <field-visibility>
               <show id="cm:name" />
               <!-- cm:effectivity aspect -->
               <show id="cm:from" force="true"/>
               <show id="cm:to" force="true"/>
            </field-visibility>
             <edit-form template="/org/alfresco/components/form/popupedit-form.ftl" />
