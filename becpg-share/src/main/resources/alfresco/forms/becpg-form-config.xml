	<config evaluator="aspect" condition="bcpg:entityTplAspect">
		<forms>
			<form>
				<field-visibility>
					<show id="bcpg:entityTplEnabled" />
					<show id="bcpg:entityTplIsDefault" />
					<show id="bcpg:entityTplScript" />
					
				</field-visibility>
				<appearance>
					<set id="template" appearance="bordered-panel" label-id="becpg.forms.set.template.label" />
					<field id="bcpg:entityTplEnabled" set="template" />
					<field id="bcpg:entityTplIsDefault" set="template" />
					<field id="bcpg:entityTplScript" set="template" mandatory="false" read-only="false">
						<control template="/org/alfresco/components/form/controls/association.ftl">
							<control-param name="startLocation">{doclib}</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	
	
	<config evaluator="aspect" condition="bcpg:autoMergeAspect">
		<forms>
			<form>
				<field-visibility>
					<show id="bcpg:autoMergeDate" />
				    <show id="bcpg:autoMergeTo" />
					<show id="bcpg:autoMergeVersionType" />
					<show id="bcpg:autoMergeComments" />
					<show id="bcpg:autoMergeImpactWUsed" />
				</field-visibility>
				<appearance>
					<set id="branch" appearance="bordered-panel" label-id="becpg.forms.set.branch.label" />
					<field id="bcpg:autoMergeDate" set="branch" />
				    <field id="bcpg:autoMergeTo" set="branch" >
				    	<control template="/org/alfresco/components/form/controls/autocomplete-association.ftl">
							<control-param name="ds">becpg/autocomplete/branches</control-param>
							<control-param name="urlParamsToPass">itemId</control-param>
						</control>
					</field>
				
					<field id="bcpg:autoMergeVersionType" set="branch" />
					<field id="bcpg:autoMergeComments" set="branch" >
						<control template="/org/alfresco/components/form/controls/textarea.ftl" />
					</field>
					<field id="bcpg:autoMergeImpactWUsed" set="branch" />
				</appearance>
			</form>
		</forms>
	</config>
	
	
	<!-- bcpg:notificationRuleList -->
	<config evaluator="model-type" condition="bcpg:notificationRuleList">
		<forms>
			<!-- Create item form -->
			<form>
				<field-visibility>
					<show id="bcpg:nrNotificationAuthorities" />
					<show id="bcpg:nrTimeType" />
					<show id="bcpg:nrTimeNumber" />
					<show id="bcpg:nrDateField" />
					
					<show id="bcpg:nrNodeType" />
					<show id="bcpg:nrTarget" />
					<show id="bcpg:nrVersionFilter" />
					<show id="bcpg:nrConditions" />
					
					<show id="bcpg:nrSubject" />
					<show id="bcpg:nrEmail" />
					
					<show id="bcpg:nrFrequency" />
					<show id="bcpg:nrRecurringTimeType" />
					<show id="bcpg:nrRecurringDay" />
					<show id="bcpg:nrFrequencyStartDate" />
					<show id="bcpg:nrForceNotification" />
				</field-visibility>
				<appearance>
					<set id="notificationRule" appearance="bordered-panel" label-id="becpg.forms.set.notification-rule.label" />
					<set id="notificationFilter" appearance="bordered-panel" label-id="becpg.forms.set.notification-filter.label" />
					<set id="notificationEMail" appearance="bordered-panel" label-id="becpg.forms.set.notification-email.label" />
					<set id="notificationRecurring" appearance="bordered-panel" label-id="becpg.forms.set.notification-recurring.label" />
					
					<field id="bcpg:nrNodeType" set="notificationFilter">
						<control template="/org/alfresco/components/form/controls/autocomplete.ftl">
							<control-param name="ds">becpg/autocomplete/entityTypeValue</control-param>
							<control-param name="saveTitle">false</control-param>
						</control>
					</field>
					<field id="bcpg:nrTarget" set="notificationFilter">
						<control template="/org/alfresco/components/form/controls/association.ftl">
							<control-param name="startLocation">{ancestor}</control-param>
							<control-param name="startLocationParams">aspect=bcpg:entityListsAspect
							</control-param>
						</control>
					</field>
					<field id="bcpg:nrConditions" set="notificationFilter" help-id="becpg.forms.help.nrConditions" >
						<control template="/org/alfresco/components/form/controls/textarea.ftl" />
					</field>
					<field id="bcpg:nrDateField" set="notificationRule">
						<control template="/org/alfresco/components/form/controls/autocomplete.ftl">
							<control-param name="ds">becpg/autocomplete/propertyDateValue</control-param>
							<control-param name="saveTitle">false</control-param>
						</control>
					</field>
					<field id="bcpg:nrTimeNumber" set="notificationRule">
						<control template="/org/alfresco/components/form/controls/number.ftl" />
					</field>
					<field id="bcpg:nrTimeType" set="notificationRule" help-id="becpg.forms.help.notificationTimeType" />
					<field id="bcpg:nrSubject" set="notificationEMail">
						<control template="/org/alfresco/components/form/controls/textfield.ftl" />
					</field>
					<field id="bcpg:nrNotificationAuthorities" set="notificationRule">
						<control template="/org/alfresco/components/form/controls/authority.ftl" />
					</field>
					<field id="bcpg:nrFrequencyStartDate" set="notificationRecurring">
						<control template="/org/alfresco/components/form/controls/date.ftl">
							<control-param name="showTime">false</control-param>
						</control>
					</field>
					<field id="bcpg:nrFrequency" set="notificationRecurring" />
					<field id="bcpg:nrEmail" set="notificationEMail">
						<control template="/org/alfresco/components/form/controls/association.ftl">
							<control-param name="startLocation">/app:company_home/app:dictionary/app:email_templates</control-param>
						</control>
					</field>
					<field id="bcpg:nrVersionFilter" set="notificationFilter" />
					<field id="bcpg:nrForceNotification" set="notificationRecurring" />
					<field id="bcpg:nrRecurringTimeType" set="notificationRecurring" help-id="becpg.forms.help.notificationFrequency" />
					<field id="bcpg:nrRecurringDay" set="notificationRecurring" />
					
				</appearance>
			</form>
			
			<!-- Filter items form -->
			<form id="filter">
				<field-visibility>
					<show id="bcpg:nrNodeType" />
					<show id="bcpg:nrDateField" />
				</field-visibility>
				<appearance>
					<field id="bcpg:nrNodeType">
						<control template="/org/alfresco/components/form/controls/autocomplete.ftl">
							<control-param name="ds">becpg/autocomplete/entityTypeValue</control-param>
							<control-param name="saveTitle">false</control-param>
						</control>
					</field>
					<field id="bcpg:nrDateField">
						<control template="/org/alfresco/components/form/controls/autocomplete.ftl">
							<control-param name="ds">becpg/autocomplete/propertyDateValue</control-param>
							<control-param name="saveTitle">false</control-param>
						</control>
					</field>
				</appearance>
			</form>

			<!-- DataGrid view from -->
			<form id="datagrid">
				<field-visibility>
					<show id="bcpg:nrNotificationAuthorities" />
					<show id="bcpg:nrTimeType" />
					<show id="bcpg:nrTimeNumber" />
					<show id="bcpg:nrDateField" />
					
					<show id="bcpg:nrNodeType" />
					<show id="bcpg:nrTarget" />
					<show id="bcpg:nrVersionFilter" />
					<show id="bcpg:nrConditions" />
					
					<show id="bcpg:nrSubject" />
					<show id="bcpg:nrEmail" />
					
					<show id="bcpg:nrFrequency" />
					<show id="bcpg:nrRecurringTimeType" />
					<show id="bcpg:nrRecurringDay" />
					<show id="bcpg:nrFrequencyStartDate" />
					<show id="bcpg:nrForceNotification" />
				</field-visibility>
			</form>
		</forms>
	</config>

