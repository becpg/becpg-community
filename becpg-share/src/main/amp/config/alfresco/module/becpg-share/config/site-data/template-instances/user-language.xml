<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
   <template-type>org/alfresco/user-language</template-type>
   <components>

      <!-- Title -->
      <component>
         <region-id>title</region-id>
         <url>/components/title/profile-title</url>
      </component>

      <!-- Toolbar  -->
      <component>
         <region-id>toolbar</region-id>
         <url>/components/profile/userprofile-toolbar</url>
      </component>
      
      <!-- User's setting language -->
       <component>
         <region-id>user-language-mgr</region-id>
         <url>/components/profile/user-language-mgr</url>
      </component>
      

      <!-- User's language -->   
      <component>
         <region-id>user-language</region-id>
         <url>/components/form</url>
         <properties>
            <itemKind>node</itemKind>
            <itemId>{nodeRef}</itemId>
            <formId>user-language</formId>
            <mode>edit</mode>
            <submitType>json</submitType>
            <showCaption>true</showCaption>
            <showCancelButton>true</showCancelButton>
         </properties>
      </component>
      
      
      
   </components>
</template-instance>