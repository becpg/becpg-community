<alfresco-config>
	<!-- (creating nodes) for entityV2 -->

	<config evaluator="model-type" condition="bcpg:entityV2">
		<forms>
			<!-- Document Library Common form -->
			<form>
				<field-visibility>
					<show id="cm:name" />
					<show id="cm:title" force="true" />
					<show id="cm:description" force="true" />
				</field-visibility>
				<appearance>
					<field id="cm:title">
						<control template="/org/alfresco/components/form/controls/textfield.ftl" />
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="bcpg:entityV2">
		<forms>
			<!-- Document Library Common form -->
			<form>
				<field-visibility>
					<show id="cm:name" />
					<show id="cm:title" force="true" />
					<show id="cm:description" force="true" />
				</field-visibility>
				<appearance>
					<field id="cm:title">
						<control template="/org/alfresco/components/form/controls/textfield.ftl" />
					</field>
				</appearance>
			</form>
			<form id="reports-parameters">
				<field-visibility>
					<show id="rep:reportLocales" force="true" />
					<show id="rep:reportParameters" force="true" />
					<show id="rep:reportTpls" force="true" />

				</field-visibility>
				<appearance>
					<field id="rep:reportLocales">
						<control template="/org/alfresco/components/form/controls/mtlangue.ftl" />
					</field>
					<field id="rep:reportParameters" />
					<field id="rep:reportTpls" />
				</appearance>
			</form>
		</forms>
	</config>

	<config condition="bcpg:activityList" evaluator="model-type">
		<forms>
			<form id="datagrid">
				<field-visibility>
					<show id="bcpg:alType" />
					<show id="bcpg:alData" />
					<show id="bcpg:alUserId" />
					<show id="cm:created" />
				</field-visibility>
				<appearance>
					<field id="bcpg:alData" read-only="true" />
					<field id="bcpg:alType" label="hidden" read-only="true" />
					<field id="bcpg:alUserId" label="hidden" read-only="true" />
					<field id="cm:created" label="hidden" read-only="true" />
				</appearance>
			</form>
			<form id="sub-datagrid">
				<field-visibility>
					<show id="bcpg:alType" />
					<show id="bcpg:alData" />
					<show id="bcpg:alUserId" />
					<show id="cm:created" />
				</field-visibility>
			</form>
			<form id="filter">
				<field-visibility>
					<show id="bcpg:alType" />
					<show id="bcpg:alUserId" />
					<show id="cm:created" force="true" />
				</field-visibility>
				<appearance>
					<field id="bcpg:alType">
						<control template="/org/alfresco/components/form/controls/selectone.ftl">
							<control-param name="isSearch">true</control-param>
							<control-param name="insertBlank">true</control-param>
						</control>
					</field>
					<field id="cm:created">
						<control template="/org/alfresco/components/form/controls/daterange.ftl">
						<control-param name="isSearch">true</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>


	<!-- ########## AUTOCOMP ############ -->

	<!-- bcpg:LinkedValue type (existing nodes) -->
	<config evaluator="node-type" condition="bcpg:linkedValue">
		<forms>
			<form>
				<field-visibility>
					<show id="bcpg:lkvValue" />
					<show id="bcpg:parentLevel" />
					<show id="bcpg:code" />
					<show id="bcpg:erpCode" force="true" />					
					<show id="bcpg:isDeleted" />
				</field-visibility>
				<appearance>

					<field id="bcpg:parentLevel">
						<control template="/org/alfresco/components/form/controls/autocomplete.ftl">
							<control-param name="ds">becpg/autocomplete/allLinkedvalue
							</control-param>
							<control-param name="urlParamsToPass">destination,itemId
							</control-param>
						</control>
					</field>
				</appearance>
			</form>

		</forms>
	</config>

	<config evaluator="model-type" condition="bcpg:linkedValue">
		<forms>
			<!-- Create item form -->
			<form>
				<field-visibility>
					<show id="bcpg:lkvValue" />
					<show id="bcpg:erpCode" force="true" />
					<show id="bcpg:parentLevel" />
					<show id="bcpg:isDeleted" />
				</field-visibility>
				<appearance>
					<field id="bcpg:parentLevel">
						<control template="/org/alfresco/components/form/controls/autocomplete.ftl">
							<control-param name="ds">becpg/autocomplete/allLinkedvalue
							</control-param>
							<control-param name="urlParamsToPass">destination,itemId
							</control-param>
						</control>
					</field>
				</appearance>
			</form>

			<!-- Data Grid view -->
			<form id="filter">
				<field-visibility>
					<show id="bcpg:code" />
					<show id="bcpg:lkvValue" />
					<show id="bcpg:parentLevel" />
					<show id="bcpg:isDeleted" />
				</field-visibility>
				<appearance>
					<field id="bcpg:parentLevel">
						<control template="/org/alfresco/components/form/controls/autocomplete.ftl">
							<control-param name="ds">becpg/autocomplete/allLinkedvalue
							</control-param>
							<control-param name="urlParamsToPass">list
							</control-param>
						</control>
					</field>
				</appearance>
			</form>

			<form id="datagrid">
				<field-visibility>
					<show id="bcpg:depthLevel" />
					<show id="bcpg:code" />
					<show id="bcpg:erpCode" force="true" />
					<show id="bcpg:lkvValue" />
					<show id="bcpg:parentLevel" />
					<show id="bcpg:isDeleted" />
				</field-visibility>
				<appearance>
					<field id="bcpg:parentLevel">
						<control template="/org/alfresco/components/form/controls/autocomplete.ftl">
							<control-param name="ds">becpg/autocomplete/linkedvalue
							</control-param>
							<control-param name="urlParamsToPass">destination,itemId
							</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<!-- bcpg:ListValue type (existing nodes) -->
	<config evaluator="node-type" condition="bcpg:listValue">
		<forms>
			<form>
				<field-visibility>
					<show id="bcpg:lvCode" />
					<show id="bcpg:lvValue" />
				</field-visibility>
				<appearance>
					<field id="bcpg:lvCode" read-only="true" />
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="bcpg:listValue">
		<forms>
			<!-- Create item form -->
			<form>
				<field-visibility>
					<show id="bcpg:lvCode" />
					<show id="bcpg:lvValue" />
				</field-visibility>
			</form>

			<!-- Data Grid view -->
			<form id="filter">
				<field-visibility>
					<show id="bcpg:lvCode" />
					<show id="bcpg:lvValue" />
				</field-visibility>
			</form>

			<form id="datagrid">
				<field-visibility>
					<show id="bcpg:lvCode" />
					<show id="bcpg:lvValue" />
				</field-visibility>
				<appearance>
					<field id="bcpg:lvCode" read-only="true" />
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="aspect" condition="bcpg:entityTplAspect">
		<forms>
			<form>
				<field-visibility>
					<show id="bcpg:entityTplEnabled" />
					<show id="bcpg:entityTplIsDefault" />
				</field-visibility>
				<appearance>
					<set id="template" appearance="bordered-panel" label-id="becpg.forms.set.template.label" />
					<field id="bcpg:entityTplEnabled" set="template" />
					<field id="bcpg:entityTplIsDefault" set="template" />
				</appearance>
			</form>
		</forms>
	</config>

</alfresco-config>