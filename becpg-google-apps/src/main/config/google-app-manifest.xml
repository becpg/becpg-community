<?xml version="1.0" encoding="UTF-8" ?>
<ApplicationManifest xmlns="http://schemas.google.com/ApplicationManifest/2009">

  <!-- Support info to show in the marketplace & control panel -->
  <Support>
    <!--  URL for application configuration, accessed from the app settings page in the control panel -->
    <Link rel="manage" href="https://www.becpg.fr/googleApps.php?admin=true&amp;from=google&amp;domain=${DOMAIN_NAME}" />

    <!-- URL explaining how customers get support. -->
    <Link rel="support" href="https://www.becpg.fr/google/support" />

    <!-- URL that is displayed to admins during the deletion process, to specify policies such as data retention, how to claim accounts, etc. -->
    <Link rel="deletion-policy" href="https://www.becpg.fr/google/deletion-policy" />

  </Support>

  <!-- Name and description pulled from message bundles -->
  <Name>beCPG PLM</Name>
  <Description>le PLM de l'agroalimentaire et de la cosm√©tique</Description>
  <Description language="en">the PLM serving the Food and Cosmetics industries</Description>

  <!-- Show this link in Google's universal navigation for all users -->
  <Extension id="navLink" type="link">
    <Name>beCPG PLM</Name>
    <Url>https://www.becpg.fr/googleApps.php?from=google&amp;domain=${DOMAIN_NAME}</Url>
    <Scope ref="docsFeed"/>
    <Scope ref="spreadsheetsFeed"/>
  </Extension>

  <!-- Declare our OpenID realm so our app is white listed -->
  <Extension id="realm" type="openIdRealm">
    <Url>https://*.becpg.fr</Url>
  </Extension>
  
   
  
   <!-- Need access to the Documents feed -->
  <Scope id="docsFeed">
    <Url>http://docs.google.com/feeds/</Url>
    <Reason>This application allow inline edit of documents files.</Reason>
  </Scope>
  
  <Scope id="spreadsheetsFeed">
    <Url>http://spreadsheets.google.com/feeds/</Url>
    <Reason>This application allow inline edit of spreadsheets files.</Reason>
  </Scope>
  
</ApplicationManifest>