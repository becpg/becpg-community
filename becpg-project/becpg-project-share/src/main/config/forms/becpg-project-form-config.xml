	<config condition="pjt:taskLegend" evaluator="node-type">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" />
					<show id="bcpg:color" />
					<show id="bcpg:isDeleted" />
				</field-visibility>
				<appearance>
