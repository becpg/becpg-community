<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>becpg-parent</artifactId>
		<groupId>fr.becpg</groupId>
		<version>1.5.0</version>
		<relativePath>../</relativePath>
	</parent>
	
	<modelVersion>4.0.0</modelVersion>
	<artifactId>becpg-core</artifactId>
	<packaging>amp</packaging>
	<name>beCPG core</name>
	<description>BeCPG repository</description>

	<dependencies>

		<!-- beCPG -->
		<dependency>
			<groupId>fr.becpg</groupId>
			<artifactId>becpg-controls-core</artifactId>
			<version>1.5.0</version>
			<type>jar</type>
			<classifier>api</classifier>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>fr.becpg</groupId>
			<artifactId>becpg-designer-core</artifactId>
			<version>1.5.0</version>
			<type>jar</type>
			<classifier>api</classifier>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>fr.becpg</groupId>
			<artifactId>becpg-report</artifactId>
			<version>1.5.0</version>
			<classifier>client</classifier>
			<type>jar</type>
			<exclusions>
				<exclusion>
					<groupId>fr.becpg</groupId>
					<artifactId>birt-sdk</artifactId>
				</exclusion>
				<exclusion>
					<groupId>log4j</groupId>
					<artifactId>log4j</artifactId>
				</exclusion>
				<exclusion>
					<groupId>commons-logging</groupId>
					<artifactId>commons-logging</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		
		<!-- alfresco -->
		 <dependency>
            <groupId>org.alfresco</groupId>
            <artifactId>alfresco-repository</artifactId>
            <version>${alfresco.version}</version>
            <scope>provided</scope>
        </dependency>

			<dependency>
            <groupId>org.alfresco</groupId>
            <artifactId>alfresco-remote-api</artifactId>
            <version>${alfresco.version}</version>
            <scope>provided</scope>
        </dependency>

		

		<dependency>
			<groupId>org.springframework.extensions.surf</groupId>
			<artifactId>spring-webscripts</artifactId>
			<version>1.2.0-M3</version>
			<classifier>tests</classifier>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<artifactId>spring-surf-core-configservice</artifactId>
					<groupId>org.springframework.extensions.surf</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		
<!-- 
		<dependency>
			<groupId>jmock</groupId>
			<artifactId>jmock</artifactId>
			<version>1.2.0</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-mock</artifactId>
			<version>2.0.8</version>
			<scope>test</scope>
		</dependency> -->


	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.13</version>
				<configuration>
					<argLine>${app.testing.jvm.args}</argLine>
					<excludes>
						<exclude>**/*WebScriptTest.java</exclude>
						<exclude>fr/becpg/repo/olap/OlapServiceTest.java</exclude>
						<exclude>fr/becpg/repo/importer/UserImportServiceTest.java</exclude>
						<exclude>fr/becpg/repo/product/ProductVersionServiceTest.java</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<classifier>api</classifier>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>test-webscripts</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>2.12</version>
						<configuration>
							<argLine>${app.testing.jvm.args}</argLine>
							<includes>
								<include>**/*WebScriptTest.java</include>
							</includes>
								<excludes>
									<exclude>fr/becpg/repo/olap/OlapServiceTest.java</exclude>
									<exclude>fr/becpg/repo/importer/UserImportServiceTest.java</exclude>
								</excludes>
							<excludes>
							</excludes>
                		<parallel>classes</parallel>
            			<useUnlimitedThreads>true</useUnlimitedThreads>
	                  <threadCount>80</threadCount>
	                  <perCoreThreadCount>true</perCoreThreadCount>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
