		<version>1.6.0</version>
		<relativePath>../</relativePath>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>becpg-core</artifactId>
	<packaging>amp</packaging>
	<name>beCPG Core</name>
	<description>BeCPG repository</description>
	
