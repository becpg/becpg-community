			</nodeColumnKeys>
			<dataListColumnKeys>
				<dataListColumnKey attribute="bcpg:contactListJobTitle" />
			</dataListColumnKeys>
			<columns>
			</columns>
		</mapping>
		
		<mapping name="bcpg:labelClaim">
			<nodeColumnKeys>
				<nodeColumnKey attribute="cm:name" />
			</nodeColumnKeys>
			<columns>
				<column id="labelClaimFormula" type="Formula"
					attribute="bcpg:labelClaimFormula" />
			</columns>
		</mapping>
	
