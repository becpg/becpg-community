<alfresco-config>

	<config evaluator="node-type" condition="ghs:personalProtection">
		<forms>
			<form>
				<field-visibility>
					<show id="bcpg:charactName" />
				</field-visibility>
			</form>
		</forms>
	</config>
	<config evaluator="model-type" condition="ghs:personalProtection">
		<forms>
