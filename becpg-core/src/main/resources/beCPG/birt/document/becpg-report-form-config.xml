<alfresco-config>

	<!-- bcpg:finishedProduct type (existing nodes) -->
	<config evaluator="node-type" condition="bcpg:finishedProduct">
		<forms>
			<form>
				<field-visibility>
					
					<!-- mainInfo -->
					<show id="cm:name" />
					<show id="bcpg:legalName" />
					<show id="cm:description" force="true" />
					<show id="bcpg:productComment" />
					<show id="bcpg:productHierarchy1" />
					<show id="bcpg:productHierarchy2" />					
					<show id="bcpg:code" />
					<show id="bcpg:eanCode" />
					<show id="bcpg:clients" />
					<show id="rep:reportTpls" />
					<show id="bcpg:productState" />					

					<!-- formulation -->
					<show id="bcpg:productUnit" />
					<show id="bcpg:productQty" />
					<show id="bcpg:productDensity" />

					<!-- tags and categories -->
					<show id="cm:taggable" force="true" />
					<show id="cm:categories" force="true" />

					<!-- auditable -->
					<show id="cm:creator" for-mode="view" />
					<show id="cm:created" for-mode="view" />
					<show id="cm:modifier" for-mode="view" />
					<show id="cm:modified" for-mode="view" />


				</field-visibility>
				<appearance>
					<set id="mainInfo" appearance="bordered-panel" label="Désignation"
						template="/fr/becpg/components/form/2-column-set.ftl" />
					<set id="formulation" appearance="bordered-panel" label="Formulation"
						template="/fr/becpg/components/form/3-column-set.ftl" />
					<set id="categories" appearance="bordered-panel" label="Catégories"
						template="/fr/becpg/components/form/2-column-set.ftl" />
					<set id="audit" appearance="bordered-panel" label="Audit"
						template="/fr/becpg/components/form/2-column-set.ftl" />

					<!-- Main info -->
					<field id="cm:name" set="mainInfo" />
					<field id="bcpg:legalName" set="mainInfo" />
					<field id="cm:description" set="mainInfo">
						<control>
							<control-param name="activateLinks">true</control-param>
						</control>
					</field>
					<field id="bcpg:productComment" set="mainInfo">
						<control template="/fr/becpg/components/form/controls/textarea.ftl">
							<control-param name="rows">3</control-param>
						</control>
					</field>
					<field id="bcpg:productHierarchy1" set="mainInfo">
						<control template="/fr/becpg/components/form/controls/autocomplete.ftl">
							<control-param name="ds">becpg/autocomplete/listvalue/values/System/ProductHierarchy/FinishedProduct_Hierarchy1
							</control-param>
						</control>
					</field>
					<field id="bcpg:productHierarchy2" set="mainInfo">
						<control template="/fr/becpg/components/form/controls/autocomplete.ftl">
							<control-param name="ds">becpg/autocomplete/linkedvalue/values/System/ProductHierarchy/FinishedProduct_Hierarchy2
							</control-param>
							<control-param name="parent">bcpg_productHierarchy1
							</control-param>
						</control>
					</field>
					<field id="bcpg:productState" read-only="true" set="mainInfo"/>
					<field id="bcpg:code" read-only="true" set="mainInfo" />
					<field id="bcpg:eanCode" set="mainInfo" />
					<field id="bcpg:clients" force="true" set="mainInfo">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl" />
					</field>
					<field id="rep:reportTpls" set="mainInfo">
						<control
							template="/fr/becpg/components/form/controls/autocomplete-association.ftl">
							<control-param name="ds">becpg/autocomplete/productreport/reports/FinishedProduct
							</control-param>
						</control>
					</field>
					
					<!-- formulation -->
					<field id="bcpg:productQty" set="formulation" />
					<field id="bcpg:productUnit" set="formulation" />
					<field id="bcpg:productDensity" set="formulation" />

					<!-- categories -->
					<field id="cm:taggable" set="categories">
						<control>
							<control-param name="compactMode">true</control-param>
							<control-param name="params">aspect=cm:taggable
							</control-param>
							<control-param name="createNewItemUri">/api/tag/workspace/SpacesStore
							</control-param>
							<control-param name="createNewItemIcon">tag</control-param>
						</control>
					</field>
					<field id="cm:categories" set="categories">
						<control>
							<control-param name="compactMode">true</control-param>
						</control>
					</field>

					<!-- audit -->
					<field id="cm:creator" set="audit" />
					<field id="cm:created" set="audit" />
					<field id="cm:modifier" set="audit" />
					<field id="cm:modified" set="audit" />
				</appearance>
			</form>
		</forms>
	</config>

