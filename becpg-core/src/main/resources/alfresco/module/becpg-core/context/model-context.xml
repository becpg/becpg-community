<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Registration of new models -->
	<bean id="bcpg.dictionaryBootstrap" parent="dictionaryModelBootstrap"
		depends-on="datalistModelBootstrap">
		<property name="models">
			<list>
				<value>alfresco/module/${artifactId}/model/reportModel.xml</value>
				<value>alfresco/module/${artifactId}/model/becpgModel.xml</value>
				<value>alfresco/module/${artifactId}/model/securityModel.xml</value>
				<value>alfresco/module/${artifactId}/model/variantModel.xml</value>
			</list>
		</property>

		<property name="labels">
			<list>				
				<value>alfresco/module/${artifactId}/model/reportModel</value>
				<value>alfresco/module/${artifactId}/model/becpgModel</value>
				<value>alfresco/module/${artifactId}/model/securityModel</value>
				<value>alfresco/module/${artifactId}/model/variantModel</value>
			</list>
		</property>
	</bean>
	
	
	<!-- dynListConstraint -->
	<bean id="dynListConstraint" class="fr.becpg.repo.dictionary.constraint.DynListConstraint">
		<property name="serviceRegistry" ref="ServiceRegistry" />
		<property name="beCPGCacheService" ref="beCPGCacheService" />
	</bean>
	
	<!-- CurrencyConstraint -->
	<bean id="currencyConstraint" class="fr.becpg.repo.dictionary.constraint.CurrencyConstraint">
		<property name="beCPGCacheService" ref="beCPGCacheService" />
		<property name="systemConfigurationService" ref="systemConfigurationService">
		</property>
	</bean>
	
</beans>
