<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN 2.0//EN' 'http://www.springframework.org/dtd/spring-beans-2.0.dtd'>

<beans>

		<!-- Product dictionary -->
	<bean id="productDictionaryService" class="fr.becpg.repo.product.ProductDictionaryServiceImpl">
		<property name="nodeService" ref="nodeService" />
	</bean>


	<!-- Product -->
	<bean id="productService" class="fr.becpg.repo.product.ProductServiceImpl">
		<property name="nodeService" ref="nodeService" />
		<property name="alfrescoRepository" ref="alfrescoRepository" />
		<property name="productDictionaryService" ref="productDictionaryService" />
		<property name="formulationService" ref="formulationService" />
		<property name="repoService" ref="repoService" />
		<property name="ownableService" ref="ownableService" />
		<property name="charactDetailsVisitorFactory" ref="charactDetailsVisitorFactory" />		
		<property name="policyBehaviourFilter" ref="policyBehaviourFilter" />
	</bean>

	

	<!-- Product Policies -->
	<bean id="productListUnits.ProductListPolicy"
		class="fr.becpg.repo.product.policy.productListUnits.ProductListPolicy"
		parent="abstractBeCPGPolicy">
		<property name="entityListDAO" ref="entityListDAO" />
		<property name="fileFolderService" ref="fileFolderService" />
		<property name="associationService" ref="associationService"/>
	</bean>
	<bean id="productListUnits.PriceListPolicy"
		class="fr.becpg.repo.product.policy.productListUnits.PriceListPolicy"
		parent="abstractBeCPGPolicy">
		<property name="entityListDAO" ref="entityListDAO" />
		<property name="alfrescoRepository" ref="alfrescoRepository" />
	</bean>
	<bean id="classifyProductPolicy" class="fr.becpg.repo.product.policy.ClassifyProductPolicy"
		parent="abstractBeCPGPolicy">
		<property name="namespaceService" ref="namespaceService" />
		<property name="repositoryHelper" ref="repositoryHelper" />
		<property name="productService" ref="productService"/>
	</bean>
	
	
	<!-- Product Listeners -->
	<bean id="productCheckInListener" class="fr.becpg.repo.product.listener.ProductCheckInListener">
		<property name="nodeService" ref="nodeService" />
		<property name="namespaceService" ref="namespaceService" />
		<property name="dictionaryService" ref="dictionaryService" />
	</bean>
	
	<!-- Workflow -->
	<bean id="ValidateProduct" parent="baseJavaDelegate"
		class="fr.becpg.repo.workflow.activiti.product.ValidateProduct">
		<property name="nodeService" ref="nodeService" />
		<property name="productService" ref="productService" />
		<property name="repositoryHelper" ref="repositoryHelper" />
		<property name="dictionaryService" ref="dictionaryService" />
	</bean>
	
	<bean id="classify-product" class="fr.becpg.repo.product.action.ClassifyProductActionExecuter" parent="action-executer">
      <property name="productService" ref="productService" />      
    </bean>

</beans>
