<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN 2.0//EN' 'http://www.springframework.org/dtd/spring-beans-2.0.dtd'>

<beans>

	
	<!-- ecoService -->	
	<bean id="ecoService" class="fr.becpg.repo.ecm.impl.ECOServiceImpl">
    	<property name="wUsedListService" ref="wUsedListService"/>
    	<property name="nodeService" ref="nodeService"/>
    	<property name="checkOutCheckInService" ref="checkOutCheckInService"/>
    	<property name="productService" ref="productService"/>
    	<property name="alfrescoRepository" ref="alfrescoRepository" />
    	<property name="dictionaryService" ref="dictionaryService"/>
	</bean>
	
 
  
   <!-- Extractor -->
	<bean id="ecoReportExtractor" class="fr.becpg.repo.ecm.report.ECOReportExtractor">
		<property name="nodeService" ref="nodeService" />
		<property name="alfrescoRepository" ref="alfrescoRepository" />		
	</bean>	
	
	<bean id="defaultECOExtractorPlugin" class="fr.becpg.repo.report.entity.ExtractorPlugin" init-method="init">
		<property name="entityReportService" ref="entityReportService"/>
		<property name="extractor" ref="ecoReportExtractor"/>
		<property name="typeName" value="changeOrder"/>
	</bean>
  
  <!-- ChangeOrder Webscript -->
  <bean id="webscript.fr.becpg.ecm.changeOrder.get" class="fr.becpg.repo.web.scripts.ecm.ChangeOrderWebScript" parent="webscript">
      	<property name="ecoService" ref="ecoService" />
   	</bean>
   
</beans>
