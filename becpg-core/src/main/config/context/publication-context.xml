<beans>



	<bean id="mailingListChannelType" class="fr.becpg.repo.publishing.MailingListChannelType"
		parent="baseChannelType">
		<property name="beCPGMailService" ref="beCPGMailService" />
		<property name="serviceRegistry" ref="ServiceRegistry" />
	</bean>

	<bean id="productCatalogChannelType" class="fr.becpg.repo.publishing.ProductCatalogChannelType"
		parent="baseChannelType" />
		
	<!-- Override  Alfresco to work with entityV2 -->
	 <bean id="channelHelper" class="fr.becpg.repo.publishing.ChannelHelper">
      <property name="nodeService" ref="NodeService" />
