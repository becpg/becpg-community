<?xml version='1.0' encoding='UTF-8'?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"   >


	<bean id="projectActivityService" class="fr.becpg.repo.project.impl.ProjectActivityServiceImpl">
		<property name="activityService" ref="activityService"/>
		<property name="entityListDAO" ref="entityListDAO" />
		<property name="nodeService" ref="nodeService"/>
		<property name="attributeExtractorService" ref="attributeExtractorService"/>
	</bean>

	<bean id="projectService" class="fr.becpg.repo.project.impl.ProjectServiceImpl">
		<property name="alfrescoRepository" ref="alfrescoRepository" />
		<property name="workflowService" ref="WorkflowService" />
		<property name="associationService" ref="associationService" />
		<property name="nodeService" ref="nodeService" />
		<property name="beCPGSearchService" ref="beCPGSearchService" />
		<property name="repoService" ref="repoService" />
		<property name="formulationService" ref="formulationService" />
		<property name="siteService" ref="siteService"/>
	</bean>

	<!-- Formulation -->
	<bean id="projectFormulationChain" class="fr.becpg.repo.formulation.FormulationChain"
		init-method="init">
		<property name="handlers">
			<list>
				<bean class="fr.becpg.repo.project.formulation.PlanningFormulationHandler" />
				<bean class="fr.becpg.repo.project.formulation.ScoreFormulationHandler" />
				<bean	class="fr.becpg.repo.project.formulation.TaskStateFormulationHandler">
					<property name="workflowService" ref="WorkflowService" />
					<property name="nodeService" ref="nodeService" />
				</bean>
			</list>
		</property>
		<property name="formulationService" ref="formulationService" />
		<property name="contextClass" value="fr.becpg.repo.project.data.ProjectData" />
	</bean>

	<!-- Policy -->
	<bean id="projectListPolicy" class="fr.becpg.repo.project.policy.ProjectListPolicy"
		parent="abstractBeCPGPolicy">
		<property name="projectService" ref="projectService" />
		<property name="entityListDAO" ref="entityListDAO" />
		<property name="permissionService" ref="permissionService" />
		<property name="alfrescoRepository" ref="alfrescoRepository" />	
		<property name="projectActivityService" ref="projectActivityService"/>	
	</bean>
	<bean id="projectPolicy" class="fr.becpg.repo.project.policy.ProjectPolicy"
		parent="abstractBeCPGPolicy">
		<property name="entityListDAO" ref="entityListDAO" />
		<property name="projectService" ref="projectService" />
		<property name="associationService" ref="associationService" />
		<property name="projectActivityService" ref="projectActivityService"/>	
	</bean>

	<bean id="taskValuePlugin" parent="baseListValuePlugin"
		init-method="init" class="fr.becpg.repo.project.listvalue.TaskValuePlugin">
		<property name="namespaceService" ref="namespaceService" />
		<property name="nodeService" ref="nodeService" />
		<property name="beCPGSearchService" ref="beCPGSearchService" />
		<property name="dictionaryDAO" ref="dictionaryDAO" />
	</bean>

	<!-- Workflow -->
	<bean id="CreateProduct" parent="baseJavaDelegate"
		class="fr.becpg.repo.workflow.activiti.project.CreateProduct">
		<property name="nodeService" ref="nodeService" />
		<property name="alfrescoRepository" ref="alfrescoRepository" />
		<property name="entityService" ref="entityService" />
		<property name="productService" ref="productService" />
		<property name="repoService" ref="repoService" />
	</bean>
	
	<!-- Worker -->
	<bean id="projectFormulationWorker" class="fr.becpg.repo.project.impl.ProjectFormulationWorker">
		<property name="beCPGSearchService" ref="beCPGSearchService" />
		<property name="projectService" ref="projectService" />
		<property name="policyBehaviourFilter" ref="policyBehaviourFilter" />
		<property name="transactionService" ref="transactionService" />		
	</bean>
	
	<!-- project list sort -->
	<bean id="ProjectListSortPlugin" parent="baseDataListSortPlugin" class="fr.becpg.repo.project.impl.ProjectListSortPlugin">
		<property name="dataListSortRegistry" ref="dataListSortRegistry" />
		<property name="nodeService" ref="nodeService" />
	</bean>

</beans>
