<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN 2.0//EN' 'http://www.springframework.org/dtd/spring-beans-2.0.dtd'>

<beans>

	<!-- Formulation Service -->

	<bean id="formulationService" class="fr.becpg.repo.formulation.impl.FormulationServiceImpl">
		<property name="alfrescoRepository" ref="alfrescoRepository" />
	</bean>


	<!-- Formulation details visitors -->

	<bean id="simpleCharactDetailsVisitor"
		class="fr.becpg.repo.product.formulation.details.SimpleCharactDetailsVisitor">
		<property name="alfrescoRepository" ref="alfrescoRepository" />
		<property name="nodeService" ref="nodeService" />
	</bean>

	<bean id="costCharactDetailsVisitor"
		class="fr.becpg.repo.product.formulation.details.CostCharactDetailsVisitor">
		<property name="alfrescoRepository" ref="alfrescoRepository" />
		<property name="nodeService" ref="nodeService" />
	</bean>


	<bean id="charactDetailsVisitorFactory" class="fr.becpg.repo.product.CharactDetailsVisitorFactoryImpl">
		<property name="visitorRegistry">
			<map>
				<entry key="nutList">
					<ref bean="simpleCharactDetailsVisitor" />
				</entry>
				<entry key="ingList">
					<ref bean="simpleCharactDetailsVisitor" />
				</entry>
				<entry key="costList">
					<ref bean="costCharactDetailsVisitor" />
				</entry>
			</map>
		</property>
	</bean>

	<!-- Formulation visitors -->


	<bean id="abstractProductFormulationHandler"
		class="fr.becpg.repo.product.formulation.AbstractProductFormulationHandler" abstract="true">
		<property name="alfrescoRepository" ref="alfrescoRepository" />
		<property name="entityListDAO" ref="entityListDAO" />
		<property name="nodeService" ref="nodeService" />
	</bean>


	<bean id="productFormulationChain" class="fr.becpg.repo.formulation.FormulationChain"
		init-method="init">
		<property name="handlers">
			<list>
				<bean class="fr.becpg.repo.product.formulation.ProductFormulationHandler"/>
				<bean
					class="fr.becpg.repo.product.formulation.CompositionCalculatingVisitor">
					<property name="nodeService" ref="nodeService" />
				</bean>
				<bean parent="abstractProductFormulationHandler" 
					class="fr.becpg.repo.product.formulation.ProcessCalculatingVisitor">
				</bean>
				<bean parent="abstractProductFormulationHandler"
					class="fr.becpg.repo.product.formulation.AllergensCalculatingVisitor">
				</bean>
				<bean parent="abstractProductFormulationHandler"
					class="fr.becpg.repo.product.formulation.NutsCalculatingVisitor">
				</bean>
				<bean parent="abstractProductFormulationHandler"
					class="fr.becpg.repo.product.formulation.CostsCalculatingVisitor">
				</bean>
				<bean parent="abstractProductFormulationHandler" class="fr.becpg.repo.product.formulation.IngsCalculatingVisitor" >
					<property name="mlNodeService" ref="mlAwareNodeService" />
				</bean>
				<bean parent="abstractProductFormulationHandler"
					class="fr.becpg.repo.product.formulation.PhysicoChemCalculatingVisitor">
				</bean>
				<bean parent="abstractProductFormulationHandler" 
					class="fr.becpg.repo.product.formulation.FormulaVisitor" />
			</list>
		</property>
		<property name="formulationService" ref="formulationService" />
		<property name="contextClass" value="fr.becpg.repo.product.data.ProductData" />
	</bean>




















</beans>