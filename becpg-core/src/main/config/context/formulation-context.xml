<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN 2.0//EN' 'http://www.springframework.org/dtd/spring-beans-2.0.dtd'>

<beans>

	<!-- Formulation Service -->

	<bean id="formulationService" class="fr.becpg.repo.formulation.impl.FormulationServiceImpl">
		<property name="alfrescoRepository" ref="alfrescoRepository" />
	</bean>


	<!-- Formulation details visitors -->

	<bean id="simpleCharactDetailsVisitor"
		class="fr.becpg.repo.product.formulation.details.SimpleCharactDetailsVisitor">
		<property name="alfrescoRepository" ref="alfrescoRepository" />
		<property name="nodeService" ref="nodeService" />
	</bean>

	<bean id="costCharactDetailsVisitor"
		class="fr.becpg.repo.product.formulation.details.CostCharactDetailsVisitor">
		<property name="alfrescoRepository" ref="alfrescoRepository" />
		<property name="nodeService" ref="nodeService" />
	</bean>


	<bean id="charactDetailsVisitorFactory" class="fr.becpg.repo.product.CharactDetailsVisitorFactoryImpl">
		<property name="visitorRegistry">
			<map>
				<entry key="nutList">
					<ref bean="simpleCharactDetailsVisitor" />
				</entry>
				<entry key="ingList">
					<ref bean="simpleCharactDetailsVisitor" />
				</entry>
				<entry key="costList">
					<ref bean="costCharactDetailsVisitor" />
				</entry>
				<entry key="physicoChemList">
					<ref bean="simpleCharactDetailsVisitor" />
				</entry>				
			</map>
		</property>
	</bean>

	<!-- Formulation visitors -->


	<bean id="abstractSimpleFormulationHandler"
		class="fr.becpg.repo.product.formulation.AbstractSimpleListFormulationHandler" abstract="true">
		<property name="alfrescoRepository" ref="alfrescoRepository" />
		<property name="entityListDAO" ref="entityListDAO" />
		<property name="nodeService" ref="nodeService" />
	</bean>


	<bean id="productFormulationChain" class="fr.becpg.repo.formulation.FormulationChain"
		init-method="init">
		<property name="handlers">
			<list>
				<bean class="fr.becpg.repo.product.formulation.ProductFormulationHandler">
					<property name="nodeService" ref="nodeService" />
				</bean>
				<bean	class="fr.becpg.repo.product.formulation.CompositionCalculatingFormulationHandler">
					<property name="nodeService" ref="nodeService" />
				</bean>
				<bean class="fr.becpg.repo.product.formulation.ProcessCalculatingFormulationHandler">
				</bean>
				<bean class="fr.becpg.repo.product.formulation.AllergensCalculatingFormulationHandler">
					<property name="alfrescoRepository" ref="alfrescoRepository" />
					<property name="nodeService" ref="nodeService" />
				</bean>
				<bean parent="abstractSimpleFormulationHandler"
					class="fr.becpg.repo.product.formulation.NutsCalculatingFormulationHandler">
				</bean>
				<bean parent="abstractSimpleFormulationHandler"
					class="fr.becpg.repo.product.formulation.CostsCalculatingFormulationHandler">
					<property name="entityTplService" ref="entityTplService" />
				</bean>
				<bean class="fr.becpg.repo.product.formulation.IngsCalculatingFormulationHandler" >
					<property name="nodeService" ref="nodeService" />
					<property name="alfrescoRepository" ref="alfrescoRepository" />
					<property name="associationService" ref="associationService"/>							
				</bean>
				<bean class="fr.becpg.repo.product.formulation.LabelingFormulationHandler">
				   <property name="nodeService" ref="nodeService" />
					<property name="alfrescoRepository" ref="alfrescoRepository" />
					<property name="mlNodeService" ref="mlAwareNodeService" />
				</bean>
				<bean parent="abstractSimpleFormulationHandler"
					class="fr.becpg.repo.product.formulation.PhysicoChemCalculatingFormulationHandler">
				</bean>
				<bean class="fr.becpg.repo.product.formulation.TareFormulationHandler">
					<property name="alfrescoRepository" ref="alfrescoRepository" />
				</bean>
				<bean class="fr.becpg.repo.product.formulation.FormulaFormulationHandler" >
					<property name="alfrescoRepository" ref="alfrescoRepository" />
					<property name="namespaceService" ref="namespaceService"/>
					<property name="securityMethodBeforeAdvice" ref="securityMethodBeforeAdvice"/>
					<property name="nodeService" ref="nodeService" />
				</bean>
			</list>
		</property>
		<property name="formulationService" ref="formulationService" />
		<property name="contextClass" value="fr.becpg.repo.product.data.ProductData" />
	</bean>


  <bean id="fastProductFormulationChain" class="fr.becpg.repo.formulation.FormulationChain"
		init-method="init">
		<property name="handlers">
			<list>
				<bean class="fr.becpg.repo.product.formulation.ProductFormulationHandler">
					<property name="nodeService" ref="nodeService" />
				</bean>
				<bean	class="fr.becpg.repo.product.formulation.CompositionCalculatingFormulationHandler">
					<property name="nodeService" ref="nodeService" />
				</bean>
				<bean parent="abstractSimpleFormulationHandler"
					class="fr.becpg.repo.product.formulation.NutsCalculatingFormulationHandler">
				</bean>
				<bean parent="abstractSimpleFormulationHandler"
					class="fr.becpg.repo.product.formulation.CostsCalculatingFormulationHandler">
					<property name="entityTplService" ref="entityTplService" />
				</bean>
				<bean class="fr.becpg.repo.product.formulation.FormulaFormulationHandler" >
					<property name="alfrescoRepository" ref="alfrescoRepository" />
					<property name="namespaceService" ref="namespaceService"/>
					<property name="securityMethodBeforeAdvice" ref="securityMethodBeforeAdvice"/>
					<property name="nodeService" ref="nodeService" />
				</bean>
			</list>
		</property>
		<property name="formulationService" ref="formulationService" />
		<property name="chainId" value="fastProductFormulationChain"/>
		<property name="contextClass" value="fr.becpg.repo.product.data.ProductData" />
	</bean>



</beans>