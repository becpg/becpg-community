<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN 2.0//EN' 'http://www.springframework.org/dtd/spring-beans-2.0.dtd'>

<beans>

	<bean id="beCPGReportEngine" class="fr.becpg.repo.report.engine.impl.BeCPGReportServerClient">
	 <property name="nodeService" ref="nodeService"/>
	 <property name="reportServerUrl" value="${becpg.reportServerUrl}"/>
	 <property name="contentService" ref="contentService"/>
	</bean>

	<!-- Report -->
	<bean id="reportTplService" class="fr.becpg.repo.report.template.impl.ReportTplServiceImpl">
		<property name="nodeService" ref="nodeService" />
		<property name="contentService" ref="contentService" />		
		<property name="beCPGSearchService" ref="beCPGSearchService" />
		<property name="mimetypeService" ref="mimetypeService"/>		
		<property name="associationService" ref="associationService"/>
	</bean>
	
	<!-- Abstract bean -->
	<bean id="abstractEntityReportExtractor" abstract="true" class="fr.becpg.repo.report.entity.impl.AbstractEntityReportExtractor">
		<property name="dictionaryService" ref="dictionaryService" />
		<property name="namespaceService" ref="namespaceService" />
		<property name="attributeExtractorService" ref="attributeExtractorService" />
		<property name="nodeService" ref="nodeService" />
		<property name="entityService" ref="entityService"/>
		<property name="versionService" ref="versionService"/>
		<property name="fileFolderService" ref="fileFolderService" />
		<property name="associationService" ref="associationService"/>		
	</bean>
	
	<!-- Extractor -->
	<bean id="defaultProductReportExtractor" class="fr.becpg.repo.product.report.DefaultProductReportExtractor" parent="abstractEntityReportExtractor">
		<property name="alfrescoRepository" ref="alfrescoRepository" />
		<property name="productDictionaryService" ref="productDictionaryService"/>		
		<property name="mlNodeService" ref="mlAwareNodeService" />		
		<property name="repositoryEntityDefReader" ref="repositoryEntityDefReader"/>
	</bean>


	<!-- Node report -->	
	<bean id="entityReportService" class="fr.becpg.repo.report.entity.impl.EntityReportServiceImpl">
		<property name="nodeService" ref="nodeService" />
		<property name="contentService" ref="contentService" />		
		<property name="fileFolderService" ref="fileFolderService"/>		
		<property name="beCPGReportEngine" ref="beCPGReportEngine" />
		<property name="reportTplService" ref="reportTplService" />		
		<property name="mimetypeService" ref="mimetypeService"/>
		<property name="associationService" ref="associationService"/>
		<property name="permissionService" ref="permissionService"/>		
		<property name="policyBehaviourFilter" ref="policyBehaviourFilter"/>	
		<property name="transactionService" ref="transactionService" />
		<property name="preferenceService" ref="preferenceService"/>
		<property name="namespaceService" ref="namespaceService"/>
	</bean>
	
	<!-- Thread pool for reports async generation -->
	<bean id="reportAsyncThreadPool" class="org.alfresco.util.ThreadPoolExecutorFactoryBean">
        <property name="poolName">
            <value>becpgReportAsyncAction</value>
        </property>
        <property name="corePoolSize">
            <value>8</value>
        </property>
        <property name="maximumPoolSize">
            <value>20</value>
        </property>
        <property name="threadPriority">
            <value>1</value>
        </property>
    </bean>
	
	
	<bean id="entityReportAsyncGenerator" class="fr.becpg.repo.report.entity.impl.EntityReportAsyncGeneratorImpl">
		<property name="threadExecuter" ref="reportAsyncThreadPool" />
		<property name="entityReportService" ref="entityReportService" />
	</bean>
	
	<bean id="defaultExtractorPlugin" class="fr.becpg.repo.report.entity.ExtractorPlugin" init-method="init">
		<property name="entityReportService" ref="entityReportService"/>
		<property name="extractor" ref="defaultProductReportExtractor"/>
		<property name="typeName" value="default"/>
	</bean>
	
	
		<!-- Search report -->	
	<bean id="exportSearchService" class="fr.becpg.repo.report.search.ExportSearchServiceImpl">
		<property name="nodeService" ref="nodeService" />
		<property name="contentService" ref="contentService" />
		<property name="beCPGReportEngine" ref="beCPGReportEngine" />
		<property name="namespaceService" ref="namespaceService" />
		<property name="entityListDAO" ref="entityListDAO" />
		<property name="beCPGSearchService" ref="beCPGSearchService" />
		<property name="entityService" ref="entityService" />
		<property name="attributeExtractorService" ref="attributeExtractorService"/>		
		<property name="dictionaryService" ref="dictionaryService" />
	</bean>
	
 
   
   <!-- CompareEntityReportService -->
	<bean id="compareEntityReportService" class="fr.becpg.repo.entity.comparison.CompareEntityReportServiceImpl">
		<property name="compareEntityService" ref="compareEntityService" />
		<property name="beCPGReportEngine" ref="beCPGReportEngine" />
		<property name="reportTplService" ref="reportTplService" />
		<property name="nodeService" ref="nodeService" />		
		<property name="dictionaryService" ref="dictionaryService" />
		<property name="namespaceService" ref="namespaceService" />
	</bean>	
	
	
	<!-- Report Policy 
	<bean id="entityReportPolicy" class="fr.becpg.repo.entity.policy.EntityReportPolicy"
		parent="abstractBeCPGPolicy">
		<property name="entityReportAsyncGenerator" ref="entityReportAsyncGenerator"/>
	</bean>
	
	-->
	
	<!-- Report property decorator -->
	 <bean id="reportAssociationDecorator" parent="baseAssocDecorator" class="fr.becpg.repo.report.jscript.ReportAssociationDecorator">    
        <property name="associationName" value="rep:reports" />    
        <property name="reportTplService" ref="reportTplService"/>
        <property name="entityReportService" ref="entityReportService"/>
    </bean>
    
</beans>
