<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN 2.0//EN' 'http://www.springframework.org/dtd/spring-beans-2.0.dtd'>

<beans>

   	 
	<bean id="birtPlatformListener" class="fr.becpg.repo.report.engine.BirtPlatformListener"
		init-method="start" destroy-method="shutdown" />
	
	
	<bean id="reportEngine" factory-bean="birtPlatformListener"
		factory-method="getReportEngine"/>
		
		
   
	<!-- Report -->
	<bean id="reportTplService" class="fr.becpg.repo.report.template.impl.ReportTplServiceImpl">
		<property name="nodeService" ref="nodeService" />
		<property name="contentService" ref="contentService" />		
		<property name="beCPGSearchService" ref="beCPGSearchService" />
		<property name="mimetypeService" ref="mimetypeService"/>		
	</bean>
	
	<!-- Extractor -->
	<bean id="defaultProductReportExtractor" class="fr.becpg.repo.product.report.DefaultProductReportExtractor">
		<property name="dictionaryService" ref="dictionaryService" />
		<property name="nodeService" ref="nodeService" />
		<property name="propertyService" ref="propertyService" />
		<property name="namespaceService" ref="namespaceService" />
		<property name="productDAO" ref="productDAO"/>
		<property name="productDictionaryService" ref="productDictionaryService"/>
		<property name="entityService" ref="entityService"/>
		<property name="entityVersionService" ref="entityVersionService"/>
	</bean>


	<!-- Node report -->	
	<bean id="entityReportService" class="fr.becpg.repo.report.entity.impl.EntityReportServiceImpl">
		<property name="nodeService" ref="nodeService" />
		<property name="contentService" ref="contentService" />		
		<property name="fileFolderService" ref="fileFolderService"/>		
		<property name="entityListDAO" ref="entityListDAO" />
		<property name="reportEngine" ref="reportEngine" />
		<property name="mimetypeService" ref="mimetypeService"/>
		<property name="reportTplService" ref="reportTplService" />		
		<property name="policyBehaviourFilter" ref="policyBehaviourFilter" />
		<property name="associationService" ref="associationService" />
	</bean>
	
	<bean id="defaultExtractorPlugin" class="fr.becpg.repo.report.entity.ExtractorPlugin" init-method="init">
		<property name="entityReportService" ref="entityReportService"/>
		<property name="extractor" ref="defaultProductReportExtractor"/>
		<property name="typeName" value="default"/>
	</bean>
	
	
		<!-- Search report -->	
	<bean id="exportSearchService" class="fr.becpg.repo.report.search.ExportSearchServiceImpl">
		<property name="nodeService" ref="nodeService" />
		<property name="contentService" ref="contentService" />
		<property name="reportEngine" ref="reportEngine" />
		<property name="namespaceService" ref="namespaceService" />
		<property name="entityListDAO" ref="entityListDAO" />
		<property name="entityListValuePlugin" ref="entityListValuePlugin" />
		<property name="entityService" ref="entityService" />
		<property name="propertyService" ref="propertyService"/>		
		<property name="dictionaryService" ref="dictionaryService" />
	</bean>
	
 
   
   <!-- CompareEntityReportService -->
	<bean id="compareEntityReportService" class="fr.becpg.repo.entity.comparison.CompareEntityReportServiceImpl">
		<property name="compareEntityService" ref="compareEntityService" />
		<property name="contentService" ref="contentService" />
		<property name="reportEngine" ref="reportEngine" />
		<property name="reportTplService" ref="reportTplService" />
		<property name="nodeService" ref="nodeService" />		
		<property name="dictionaryService" ref="dictionaryService" />
	</bean>	
	
	<!-- Policy -->
	<bean id="EntityReportPolicy" class="fr.becpg.repo.entity.policy.EntityReportPolicy" init-method="init">
		<property name="policyComponent" ref="policyComponent" />
		<property name="transactionService" ref="transactionService"/>
		<property name="threadExecuter" ref="defaultAsyncThreadPool" />
		<property name="nodeService" ref="nodeService" />			
		<property name="lockService" ref="lockService" />
		<property name="entityReportService" ref="entityReportService" />
	</bean>		
   
</beans>
