		<property name="namespaceService" ref="namespaceService" />
		<property name="dictionaryService" ref="dictionaryService" />
	</bean>
	<bean id="auditEntityListItemPolicies"
		class="fr.becpg.repo.entity.datalist.policy.AuditEntityListItemPolicy"
		  parent="abstractBeCPGPolicy">
		<property name="authenticationService" ref="authenticationService" />
	</bean>
	<bean id="sortableListPolicy" class="fr.becpg.repo.entity.datalist.policy.SortableListPolicy"
		 parent="abstractBeCPGPolicy">
		<property name="dataListSortService" ref="dataListSortService" />
	</bean>

	<!-- WUsedList -->
	<bean id="wUsedListService" class="fr.becpg.repo.entity.datalist.impl.WUsedListServiceImpl">
