<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN 2.0//EN' 'http://www.springframework.org/dtd/spring-beans-2.0.dtd'>

<beans>

	<!-- Entity Policies -->

	<bean id="entityActivityPolicy" class="fr.becpg.repo.activity.policy.EntityActivityPolicy" parent="abstractBeCPGPolicy" >
		<property name="entityDictionaryService" ref="entityDictionaryService" />
		<property name="entityActivityService" ref="entityActivityService" />
	</bean>


	<!-- DataList Extractor -->

    <bean id="activityListExtractor" class="fr.becpg.repo.activity.extractor.ActivityListExtractor" parent="simpleExtractor">
		<property name="entityActivityService" ref="entityActivityService"/>
		<property name="defaultExtractor" value="false"/>
	</bean>
	
	<!-- Job  -->
	
	  <bean id="entityActivityJob" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass">
            <value>fr.becpg.repo.activity.EntityActivityJob</value>
        </property>
        <property name="jobDataAsMap">
            <map>
                <entry key="entityActivityService">
                    <ref bean="entityActivityService" />
                </entry>
                <entry key="tenantAdminService">
                    <ref bean="tenantAdminService" />
                </entry>
            </map>
        </property>
    </bean>
    
    <bean id="entityActivityJobTrigger" class="org.alfresco.util.CronTriggerBean"  >
        <property name="jobDetail">
            <ref bean="entityActivityJob"/>
        </property>
        <property name="scheduler">
            <ref bean="schedulerFactory"/>
        </property>
        <property name="cronExpression">
            <value>${beCPG.activity.cleaner.cronExpression}</value>
        </property>
    </bean>
    
        
</beans>
