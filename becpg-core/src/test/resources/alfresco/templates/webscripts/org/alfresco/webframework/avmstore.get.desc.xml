  <shortname>Web Framework AVM Store</shortname>
  <description>Remote service mirroring the Store interface - to an AVM store</description>
  <url>/avmstore/{method}</url>
  <url>/avmstore/{method}/{path}</url>
  <url>/avmstore/{method}/s/{store}</url>
  <url>/avmstore/{method}/s/{store}/{path}</url>  
  <url>/avmstore/{method}/s/{store}/w/{webapp}</url>
