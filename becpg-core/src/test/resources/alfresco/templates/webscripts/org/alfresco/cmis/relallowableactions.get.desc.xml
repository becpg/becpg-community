<webscript kind="org.alfresco.cmiskind">
  <shortname>Get Relationship Allowable Actions (getAllowableActions)</shortname>
  <description>
  <![CDATA[
  Gets the list of allowable actions for a Relationship.
  ]]>
  </description>
  
  <url>/cmis/rel/{assoc_id}/allowableactions</url>
  <args>
    <arg>
        <shortname>assoc_id</shortname>
        <description>the relationship id to retrieve allowable actions for</description>
    </arg>
  </args>

  <format default="cmisallowableactions">argument</format>
  <responses>
    <response type="cmis.allowableactions"/>
  </responses>
  
  <authentication>guest</authentication>
  <transaction allow="readonly"/>
  <family>CMIS</family>
  <lifecycle>public_api</lifecycle>
</webscript>