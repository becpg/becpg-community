<webscript>
  <shortname>Activities site feed</shortname>
  <description>Allows the currently logged in user to get the feed for a specified site. If the site specified is private, then user must be a member or an admin user.</description>
  <url>/api/activities/feed/site/{siteId}</url>
  <url>/api/activities/feed/site/{siteId}?format=atomfeed</url>
  <url>/api/activities/feed/site/{siteId}?format=json</url>
  <url>/api/activities/feed/site/{siteId}?format=rss</url>
  <format default="atomfeed">argument</format>
  <authentication>user</authentication>
  <transaction allow="readonly">required</transaction>
</webscript>